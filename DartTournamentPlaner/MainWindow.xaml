<Window x:Class="DartTournamentPlaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartTournamentPlaner"
        xmlns:controls="clr-namespace:DartTournamentPlaner.Controls"
        mc:Ignorable="d"
        Title="Dart Tournament Planner" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        MinHeight="800" MinWidth="1400"
        Icon="Assets/Images/favicon.ico"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <Window.Resources>
        <!-- Modern Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.08"/>

        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TabStripPlacement" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tab Headers with modern design -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource HeaderGradient}" 
                                    BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="0,0,0,1"
                                    Effect="{StaticResource HeaderShadow}">
                                <TabPanel x:Name="HeaderPanel" 
                                         IsItemsHost="True" 
                                         Panel.ZIndex="1" 
                                         Background="Transparent"
                                         Margin="20,8,20,0"/>
                            </Border>

                            <!-- Content Area with shadow -->
                            <Border Grid.Row="1" 
                                    Background="{DynamicResource BackgroundBrush}" 
                                    BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="0"
                                    Effect="{StaticResource CardShadow}"
                                    CornerRadius="0,0,8,8">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"
                                                Margin="1"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabItem Style for Tournament Classes -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8,8,0,0"
                                    Margin="4,0,4,0"
                                    Padding="20,14,20,14">
                                <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Selected Tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{Binding Source={x:Static SystemParameters.HighContrast}, Converter={x:Null}}" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="8" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource DisabledBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" 
                                                          BlurRadius="16" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DisabledBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern MenuBar Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{DynamicResource HeaderGradient}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Effect" Value="{StaticResource HeaderShadow}"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Fixed MenuItem Style with proper rounded corners -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="templateRoot" 
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="Icon" 
                                                Grid.Column="0"
                                                ContentSource="Icon" 
                                                Margin="0,0,8,0"/>
                                <ContentPresenter x:Name="HeaderHost" 
                                                Grid.Column="1"
                                                ContentSource="Header"/>
                                <TextBlock x:Name="InputGestureText" 
                                         Grid.Column="2"
                                         Text="{TemplateBinding InputGestureText}" 
                                         Margin="8,0,0,0"
                                         Foreground="{DynamicResource SecondaryTextBrush}"/>

                                <!-- Fixed Popup with proper background handling -->
                                <Popup x:Name="PART_Popup" 
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       PopupAnimation="Fade"
                                       Placement="Bottom"
                                       AllowsTransparency="True">
                                    <!-- Outer Border to prevent black corners -->
                                    <Border Background="Transparent" 
                                            Padding="2">
                                        <!-- Inner Border with proper styling -->
                                        <Border Background="{DynamicResource BackgroundBrush}" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="8"
                                                Effect="{StaticResource CardShadow}"
                                                Padding="6">
                                            <!-- ItemsPresenter with rounded clipping -->
                                            <Border CornerRadius="6" 
                                                    ClipToBounds="True">
                                                <ItemsPresenter/>
                                            </Border>
                                        </Border>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="templateRoot" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for submenu items to ensure rounded corners -->
        <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="templateRoot" 
                                Background="Transparent"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="Icon" 
                                                Grid.Column="0"
                                                ContentSource="Icon" 
                                                Margin="0,0,6,0"/>
                                <ContentPresenter x:Name="HeaderHost" 
                                                Grid.Column="1"
                                                ContentSource="Header"/>
                                <TextBlock x:Name="InputGestureText" 
                                         Grid.Column="2"
                                         Text="{TemplateBinding InputGestureText}" 
                                         Margin="6,0,0,0"
                                         Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="templateRoot" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="{DynamicResource HeaderGradient}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Effect" Value="{StaticResource HeaderShadow}"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Window.Resources>

    <!-- Main content with modern gradient background -->
    <Border Background="{DynamicResource MainBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Menu Bar with modern design and Dark Mode Toggle -->
            <Menu Grid.Row="0">
                <MenuItem Name="FileMenuItem" Header="File">
                    <MenuItem Name="NewMenuItem" Header="New" Click="New_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="OpenMenuItem" Header="Open" Click="Open_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="SaveMenuItem" Header="Save" Click="Save_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="SaveAsMenuItem" Header="Save As" Click="SaveAs_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem Name="PrintMenuItem" Header="Print" Click="Print_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem Name="ExitMenuItem" Header="Exit" Click="Exit_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Name="ViewMenuItem" Header="View">
                    <MenuItem Name="OverviewModeMenuItem" Header="Tournament Overview" Click="OverviewMode_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <!-- ✅ NEU: Dark Mode Toggle im View Menü -->
                    <MenuItem Name="ToggleDarkModeMenuItem" Header="🌙 Toggle Dark Mode" Click="ToggleDarkMode_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <!-- <MenuItem Name="ApiMenuItem" Header="API">
                    <MenuItem Name="StartApiMenuItem" Header="Start API" Click="StartApi_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="StopApiMenuItem" Header="Stop API" Click="StopApi_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="OpenApiDocsMenuItem" Header="API Documentation" Click="OpenApiDocs_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem Name="ApiStatusMenuItem" Header="API Status" IsEnabled="False" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem> -->
                <!-- Tournament Hub Menu -->
                <MenuItem x:Name="TournamentHubMenuItem" Header="Tournament Hub">
                    <MenuItem x:Name="RegisterWithHubMenuItem" Header="Register with Hub" Click="RegisterWithHub_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem x:Name="UnregisterFromHubMenuItem" Header="Unregister from Hub" Click="UnregisterFromHub_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem x:Name="ShowJoinUrlMenuItem" Header="Show Join URL" Click="ShowJoinUrl_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem x:Name="ManualSyncMenuItem" Header="Manual Sync" Click="ManualSyncWithHub_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem x:Name="HubSettingsMenuItem" Header="Hub Settings" Click="HubSettings_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <!-- License Menu -->
                <MenuItem x:Name="LicenseMenuItem" Header="License">
                    <MenuItem x:Name="LicenseStatusMenuItem" Header="License Status" Click="LicenseStatus_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem x:Name="ActivateLicenseMenuItem" Header="Activate License" Click="ActivateLicense_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem x:Name="LicenseInfoMenuItem" Header="License Information" Click="LicenseInfo_Click" Visibility="Collapsed" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem x:Name="RemoveLicenseMenuItem" Header="Remove License" Click="RemoveLicense_Click" Visibility="Collapsed" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator x:Name="LicenseSeparator" Visibility="Collapsed"/>
                    <MenuItem x:Name="PurchaseLicenseMenuItem" Header="Purchase License" Click="PurchaseLicense_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
                <MenuItem Name="SettingsMenuItem" Header="Settings" Click="Settings_Click"/>
                <MenuItem Name="HelpMenuItem" Header="Help">
                    <MenuItem Name="HelpContentMenuItem" Header="Help" Click="Help_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <MenuItem Name="BugReportMenuItem" Header="Report Bug" Click="BugReport_Click" Style="{StaticResource SubMenuItemStyle}"/>
                    <Separator/>
                    <MenuItem Name="AboutMenuItem" Header="About" Click="About_Click" Style="{StaticResource SubMenuItemStyle}"/>
                </MenuItem>
            </Menu>

            <!-- Main Content Area with Card Design -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource BackgroundBrush}" 
                    CornerRadius="12" 
                    Margin="20,16,20,16"
                    Effect="{StaticResource CardShadow}">
                <TabControl Margin="0">
                    <TabItem Name="PlatinTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="SeaShell" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.8"/>
                                    </Border.Effect>
                                    <Ellipse Fill="SeaShell" Margin="2"/>
                                </Border>
                                <TextBlock Text="Platin" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="PlatinTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="GoldTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF9800" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="#FFC107" Margin="2"/>
                                </Border>
                                <TextBlock Text="Gold" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="GoldTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="SilverTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Silver" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="Silver" Margin="2"/>
                                </Border>
                                <TextBlock Text="Silber" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="SilberTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="BronzeTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#8D6E63" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="#A1887F" Margin="2"/>
                                </Border>
                                <TextBlock Text="Bronze" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="BronzeTab" Margin="12"/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Donation Button - Modern Floating Action Button Style -->
            <Border Grid.Row="1" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,32,32"
                    CornerRadius="28"
                    Background="{DynamicResource BackgroundBrush}"
                    Effect="{StaticResource CardShadow}"
                    Panel.ZIndex="100">
                <Button Name="DonationButton" 
                        Content="Support"
                        ToolTip="Support the development of this project"
                        Click="Donation_Click"
                        Width="56" Height="56"
                        FontSize="12"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="#FF9800"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="28">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                    <Setter Property="Foreground" Value="#F57C00"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedBrush}"/>
                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <!-- Status bar with Hub and API status indicators -->
            <Border Grid.Row="2" Background="{DynamicResource StatusBarBrush}" Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusTextBlock" Grid.Column="0" 
                               Text="WebSocket-Hub Integration activated" Foreground="{DynamicResource StatusBarTextBrush}" VerticalAlignment="Center"/>
                    
                    <!-- Hub Status Indicator (CLICKABLE for Debug Console) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0" 
                                Cursor="Hand" Background="Transparent"
                                MouseLeftButtonDown="HubStatus_Click"
                                ToolTip="Tournament Hub Status - Click for Debug Console">
                        <Ellipse x:Name="HubStatusIndicator" Width="12" Height="12" 
                                 Fill="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="HubStatusText" Text="Hub: Connecting..." 
                                   Foreground="{DynamicResource StatusBarTextBrush}" VerticalAlignment="Center" FontSize="11"/>
                        <TextBlock x:Name="HubSyncStatus" Text="(WebSocket)" 
                                   Foreground="#3498DB" VerticalAlignment="Center" FontSize="11" Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- API Status 
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                        <Ellipse x:Name="ApiStatusIndicator" Width="8" Height="8" 
                                 Fill="#E74C3C" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ApiStatusText" Text="API: Stopped" 
                                   Foreground="{DynamicResource StatusBarTextBrush}" VerticalAlignment="Center" FontSize="11"/>
                    </StackPanel> -->
                    
                    <!-- Last Saved -->
                    <TextBlock x:Name="LastSavedBlock" Grid.Column="3" 
                               Text="Saved" Foreground="{DynamicResource StatusBarTextBrush}" 
                               VerticalAlignment="Center" Margin="20,0" FontSize="11"/>
                    
                    <!-- Language -->
                    <TextBlock x:Name="LanguageStatusBlock" Grid.Column="4" 
                               Text="EN" Foreground="{DynamicResource StatusBarTextBrush}" 
                               VerticalAlignment="Center" FontSize="11" FontWeight="Bold"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>