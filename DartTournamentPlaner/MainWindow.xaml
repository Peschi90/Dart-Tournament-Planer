<Window x:Class="DartTournamentPlaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartTournamentPlaner"
        xmlns:controls="clr-namespace:DartTournamentPlaner.Controls"
        mc:Ignorable="d"
        Title="Dart Tournament Planner" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        MinHeight="800" MinWidth="1400"
        Icon="Assets/Images/favicon.ico">

    <Window.Resources>
        <!-- Moderne Gradient-Hintergründe -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="1"/>
        </LinearGradientBrush>

        <!-- Moderne Schatten-Effekte -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.08"/>

        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TabStripPlacement" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tab Headers mit modernem Design -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource HeaderGradient}" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="0,0,0,1"
                                    Effect="{StaticResource HeaderShadow}">
                                <TabPanel x:Name="HeaderPanel" 
                                         IsItemsHost="True" 
                                         Panel.ZIndex="1" 
                                         Background="Transparent"
                                         Margin="20,8,20,0"/>
                            </Border>

                            <!-- Content Area mit Schatten -->
                            <Border Grid.Row="1" 
                                    Background="White" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="0"
                                    Effect="{StaticResource CardShadow}"
                                    CornerRadius="0,0,8,8">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"
                                                Margin="1"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabItem Style für Tournament Classes -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8,8,0,0"
                                    Margin="4,0,4,0"
                                    Padding="20,14,20,14">
                                <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Selected Tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="#FDFDFD" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="8" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F0F9FF" Offset="0"/>
                                            <GradientStop Color="#E0F2FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>

                            <!-- Combination: Selected and Hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="#F8FAFC" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="#1D4ED8"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" 
                                                          BlurRadius="16" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Moderne MenuBar Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource HeaderGradient}"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Effect" Value="{StaticResource HeaderShadow}"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="templateRoot" 
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="Icon" 
                                                Grid.Column="0"
                                                ContentSource="Icon" 
                                                Margin="0,0,8,0"/>
                                <ContentPresenter x:Name="HeaderHost" 
                                                Grid.Column="1"
                                                ContentSource="Header"/>
                                <TextBlock x:Name="InputGestureText" 
                                         Grid.Column="2"
                                         Text="{TemplateBinding InputGestureText}" 
                                         Margin="8,0,0,0"
                                         Foreground="#6B7280"/>

                                <Popup x:Name="PART_Popup" 
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       PopupAnimation="Fade"
                                       Placement="Bottom">
                                    <Border Background="White" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1" 
                                            CornerRadius="8"
                                            Effect="{StaticResource CardShadow}"
                                            Padding="4">
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="templateRoot" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F0F9FF" Offset="0"/>
                                            <GradientStop Color="#E0F2FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Moderne StatusBar Style -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="{StaticResource HeaderGradient}"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Effect" Value="{StaticResource HeaderShadow}"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Window.Resources>

    <!-- Hauptinhalt mit modernem Gradient-Hintergrund -->
    <Border Background="{StaticResource MainBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Menu Bar mit modernem Design -->
            <Menu Grid.Row="0">
                <MenuItem Name="FileMenuItem" Header="📁 Datei">
                    <MenuItem Name="NewMenuItem" Header="🆕 Neu" Click="New_Click"/>
                    <MenuItem Name="OpenMenuItem" Header="📂 Öffnen" Click="Open_Click"/>
                    <MenuItem Name="SaveMenuItem" Header="💾 Speichern" Click="Save_Click"/>
                    <MenuItem Name="SaveAsMenuItem" Header="📄 Speichern unter" Click="SaveAs_Click"/>
                    <Separator/>
                    <MenuItem Name="PrintMenuItem" Header="🖨️ Drucken" Click="Print_Click"/>
                    <Separator/>
                    <MenuItem Name="ExitMenuItem" Header="🚪 Beenden" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Name="ViewMenuItem" Header="👁️ Ansicht">
                    <MenuItem Name="OverviewModeMenuItem" Header="📺 Turnier-Übersicht" Click="OverviewMode_Click"/>
                </MenuItem>
                <MenuItem Name="ApiMenuItem" Header="🌐 API">
                    <MenuItem Name="StartApiMenuItem" Header="▶️ API starten" Click="StartApi_Click"/>
                    <MenuItem Name="StopApiMenuItem" Header="⏹️ API stoppen" Click="StopApi_Click"/>
                    <MenuItem Name="OpenApiDocsMenuItem" Header="📖 API Dokumentation" Click="OpenApiDocs_Click"/>
                    <Separator/>
                    <MenuItem Name="ApiStatusMenuItem" Header="📊 API Status" IsEnabled="False"/>
                </MenuItem>
                <!-- NEU: Tournament Hub Menü -->
                <MenuItem x:Name="TournamentHubMenuItem" Header="🎯 Tournament Hub">
                    <MenuItem x:Name="RegisterWithHubMenuItem" Header="🏁 Bei Hub registrieren" Click="RegisterWithHub_Click"/>
                    <MenuItem x:Name="UnregisterFromHubMenuItem" Header="📴 Vom Hub entregistrieren" Click="UnregisterFromHub_Click"/>
                    <Separator/>
                    <MenuItem x:Name="ShowJoinUrlMenuItem" Header="📱 Join-URL anzeigen" Click="ShowJoinUrl_Click"/>
                    <MenuItem x:Name="ManualSyncMenuItem" Header="🔄 Manuell synchronisieren" Click="ManualSyncWithHub_Click"/>
                    <Separator/>
                    <MenuItem x:Name="HubSettingsMenuItem" Header="⚙️ Hub-Einstellungen" Click="HubSettings_Click"/>
                </MenuItem>
                <MenuItem Name="SettingsMenuItem" Header="⚙️ Einstellungen" Click="Settings_Click"/>
                <MenuItem Name="HelpMenuItem" Header="❓ Hilfe">
                    <MenuItem Name="HelpContentMenuItem" Header="📖 Hilfe" Click="Help_Click"/>
                    <MenuItem Name="BugReportMenuItem" Header="🐛 Bug melden" Click="BugReport_Click"/>
                    <Separator/>
                    <MenuItem Name="AboutMenuItem" Header="ℹ️ Über" Click="About_Click"/>
                </MenuItem>
            </Menu>

            <!-- Main Content Area mit Card-Design -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="12" 
                    Margin="20,16,20,16"
                    Effect="{StaticResource CardShadow}">
                <TabControl Margin="0">
                    <TabItem Name="PlatinTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="SeaShell" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.8"/>
                                    </Border.Effect>
                                    <Ellipse Fill="SeaShell" Margin="2"/>
                                </Border>
                                <TextBlock Text="Platin" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="PlatinTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="GoldTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF9800" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="#FFC107" Margin="2"/>
                                </Border>
                                <TextBlock Text="Gold" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="GoldTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="SilverTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Silver" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="Silver" Margin="2"/>
                                </Border>
                                <TextBlock Text="Silber" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="SilberTab" Margin="12"/>
                    </TabItem>

                    <TabItem Name="BronzeTabItem">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="16" Height="16" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0"
                                        Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#8D6E63" Direction="0" ShadowDepth="0" 
                                                          BlurRadius="6" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Ellipse Fill="#A1887F" Margin="2"/>
                                </Border>
                                <TextBlock Text="Bronze" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                        <controls:TournamentTab x:Name="BronzeTab" Margin="12"/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Donation Button - Modern Floating Action Button Style -->
            <Border Grid.Row="1" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,32,32"
                    CornerRadius="28"
                    Background="White"
                    Effect="{StaticResource CardShadow}"
                    Panel.ZIndex="100">
                <Button Name="DonationButton" 
                        Content="💝"
                        ToolTip="Unterstützen Sie die Entwicklung dieses Projekts"
                        Click="Donation_Click"
                        Width="56" Height="56"
                        FontSize="37"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="#FF9800"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="28">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#FFF3E0" Offset="0"/>
                                                <GradientStop Color="#FFE0B2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#F57C00"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#FFE0B2" Offset="0"/>
                                                <GradientStop Color="#FFCC02" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>

            <!-- Statusleiste mit Hub- und API-Status-Indikatoren -->
            <Border Grid.Row="2" Background="#2C3E50" Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusTextBlock" Grid.Column="0" 
                               Text="WebSocket-Hub Integration aktiviert" Foreground="White" VerticalAlignment="Center"/>
                    
                    <!-- Hub Status Indikator (KLICKBAR für Debug Console) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0" 
                                Cursor="Hand" Background="Transparent"
                                MouseLeftButtonDown="HubStatus_Click"
                                ToolTip="Tournament Hub Status - Klicken für Debug Console">
                        <Ellipse x:Name="HubStatusIndicator" Width="12" Height="12" 
                                 Fill="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="HubStatusText" Text="Hub: Verbinde..." 
                                   Foreground="White" VerticalAlignment="Center" FontSize="11"/>
                        <TextBlock x:Name="HubSyncStatus" Text="(WebSocket)" 
                                   Foreground="#3498DB" VerticalAlignment="Center" FontSize="11" Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- API Status -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                        <Ellipse x:Name="ApiStatusIndicator" Width="8" Height="8" 
                                 Fill="#E74C3C" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ApiStatusText" Text="API: Gestoppt" 
                                   Foreground="White" VerticalAlignment="Center" FontSize="11"/>
                    </StackPanel>
                    
                    <!-- Letzte Speicherung -->
                    <TextBlock x:Name="LastSavedBlock" Grid.Column="3" 
                               Text="Gespeichert" Foreground="White" 
                               VerticalAlignment="Center" Margin="20,0" FontSize="11"/>
                    
                    <!-- Sprache -->
                    <TextBlock x:Name="LanguageStatusBlock" Grid.Column="4" 
                               Text="DE" Foreground="White" 
                               VerticalAlignment="Center" FontSize="11" FontWeight="Bold"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>