<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0EA5E9"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#374151"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#1E3A8A"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#404040"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#34D399"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
    
    <!-- Dialog Palette (pastel gradients) -->
    <LinearGradientBrush x:Key="DialogPrimaryGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1F3A4D" Offset="0"/>
        <GradientStop Color="#16413D" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DialogInfoGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E3A5F" Offset="0"/>
        <GradientStop Color="#123347" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DialogSuccessGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1F4D3A" Offset="0"/>
        <GradientStop Color="#1B4332" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DialogWarningGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#5C4320" Offset="0"/>
        <GradientStop Color="#4A3417" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DialogErrorGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#5C2B2B" Offset="0"/>
        <GradientStop Color="#4A2020" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DialogSurfaceGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2D2D30" Offset="0"/>
        <GradientStop Color="#232326" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Header Gradient -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2D2D30" Offset="0"/>
        <GradientStop Color="#252526" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Main Background -->
    <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E1E1E" Offset="0"/>
        <GradientStop Color="#181818" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Button Gradients -->
    <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1F3A4D" Offset="0"/>
        <GradientStop Color="#16413D" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#274A64" Offset="0"/>
        <GradientStop Color="#1F4D3A" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="StatusBarTextBrush" Color="#FFFFFF"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="#252526"/>
    <SolidColorBrush x:Key="DataGridSelectedBrush" Color="#1E3A8A"/>
</ResourceDictionary>