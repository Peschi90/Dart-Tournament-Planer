<UserControl x:Class="DartTournamentPlaner.Controls.PlayerStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">
    
    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
        </Style>
        
        <!-- âœ… DataGrid Styling mit Dark Mode Support -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource DataGridAlternatingRowBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource DataGridHeaderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- TextBlock Default Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel und Zusammenfassung -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <TextBlock x:Name="TitleTextBlock" Text="ðŸ“Š Spieler-Statistiken" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}" HorizontalAlignment="Center" Margin="0,10"/>
            
            <!-- Klassen-Zusammenfassung -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Center" MinWidth="600">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="PlayersHeaderText" Text="Spieler" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalPlayers}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock x:Name="MatchesHeaderText" Text="Matches" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalMatches}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock x:Name="LegsHeaderText" Text="Legs" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalLegs}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock x:Name="MaximumsHeaderText" Text="180er" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalMaximums}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock x:Name="HighFinishesHeaderText" Text="High Finishes" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalHighFinishes}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock x:Name="AverageHeaderText" Text="âŒ€ Average" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.AverageOverallAverage, StringFormat=F1}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Filter und Aktionen -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5" HorizontalAlignment="Center">
            <Button x:Name="RefreshButton" Content="ðŸ”„ Aktualisieren" Margin="10,0" 
                    Padding="15,8" Click="RefreshButton_Click"/>
            
            <TextBlock Text="{Binding Players.Count}" Margin="20,0,5,0" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="PlayersWithStatsText" Text="Spieler mit Statistiken" VerticalAlignment="Center"/>
            
            <!-- âœ… Sortierung -->
            <TextBlock x:Name="SortByText" Text="Sortieren nach:" Margin="20,0,5,0" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="SortComboBox" Margin="5,0" VerticalAlignment="Center" 
                      SelectionChanged="SortComboBox_SelectionChanged" SelectedIndex="1" MinWidth="120">
                <ComboBoxItem x:Name="SortByNameItem" Content="Name"/>
                <ComboBoxItem x:Name="SortByAverageItem" Content="Average"/>
                <ComboBoxItem x:Name="SortByMatchesItem" Content="Spiele"/>
                <ComboBoxItem x:Name="SortByWinRateItem" Content="Sieg-Quote"/>
                <ComboBoxItem x:Name="SortByMaximumsItem" Content="180er"/>
                <ComboBoxItem x:Name="SortByHighFinishesItem" Content="High Finishes"/>
            </ComboBox>
        </StackPanel>

        <!-- âœ… Ãœbersichtliche DataGrid-Tabelle -->
        <Border Grid.Row="2" Margin="10" Style="{StaticResource StatCardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="PlayersDataGrid" ItemsSource="{Binding Players}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="PlayerColumn" Header="ðŸŽ¯ Spieler" Binding="{Binding PlayerName}" Width="150" FontWeight="Bold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="MatchesColumn" Header="Matches" Binding="{Binding MatchRecord}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="WinRateColumn" Header="Gewinnrate" Binding="{Binding MatchWinRateFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="AverageColumn" Header="âŒ€ Average" Binding="{Binding OverallAverageFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="BestAverageColumn" Header="Bester Average" Binding="{Binding BestAverageFormatted}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="MaximumsColumn" Header="180er" Binding="{Binding TotalMaximums}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#7C3AED"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="HighFinishesColumn" Header="High Finishes" Binding="{Binding TotalHighFinishes}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0891B2"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="HighFinishScoresColumn" Header="HF Scores" Binding="{Binding HighFinishScores}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0891B2"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="HighestFinishColumn" Header="HÃ¶chstes HF" Binding="{Binding HighestHighFinish}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0891B2"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="Score26Column" Header="26er" Binding="{Binding TotalScore26}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- âœ… Schnellstes Match -->
                        <DataGridTextColumn x:Name="FastestMatchColumn" Header="Schnellstes Match" Binding="{Binding FastestMatchFormatted}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- âœ… Wenigste WÃ¼rfe -->
                        <DataGridTextColumn x:Name="FewestThrowsColumn" Header="Wenigste WÃ¼rfe" Binding="{Binding FewestThrowsInMatch}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#7C2D12"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn x:Name="LastMatchColumn" Header="Letztes Match" Binding="{Binding LastMatchFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- âœ… Debug-Information -->
        <TextBlock Grid.Row="2" x:Name="DebugInfoBlock" 
                   HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                   Margin="20" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"
                   Text="{Binding DebugMessage}"/>
    </Grid>
</UserControl>