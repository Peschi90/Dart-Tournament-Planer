<UserControl x:Class="DartTournamentPlaner.Controls.PlayerStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007BFF"/>
        </Style>
        
        <!-- âœ… NEU: DataGrid Styling -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F9FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel und Zusammenfassung -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <TextBlock Text="ðŸ“Š Spieler-Statistiken" FontSize="24" FontWeight="Bold" 
                       Foreground="#007BFF" HorizontalAlignment="Center" Margin="0,10"/>
            
            <!-- Klassen-Zusammenfassung -->
            <Border Style="{StaticResource StatCardStyle}" HorizontalAlignment="Center" MinWidth="600">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10">
                        <TextBlock Text="Spieler" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalPlayers}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Matches" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalMatches}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Legs" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalLegs}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="180er" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalMaximums}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="High Finishes" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.TotalHighFinishes}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="âŒ€ Average" Style="{StaticResource StatHeaderStyle}"/>
                        <TextBlock Text="{Binding Summary.AverageOverallAverage, StringFormat=F1}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Filter und Aktionen -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5" HorizontalAlignment="Center">
            <Button x:Name="RefreshButton" Content="ðŸ”„ Aktualisieren" Margin="10,0" 
                    Padding="15,8" Click="RefreshButton_Click" 
                    Background="#28A745" Foreground="White" BorderBrush="#28A745" 
                    FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <TextBlock Text="{Binding Players.Count}" Margin="20,0,5,0" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Spieler mit Statistiken" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- âœ… NEU: Ãœbersichtliche DataGrid-Tabelle -->
        <Border Grid.Row="2" Margin="10" Style="{StaticResource StatCardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="PlayersDataGrid" ItemsSource="{Binding Players}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ðŸŽ¯ Spieler" Binding="{Binding PlayerName}" Width="150" FontWeight="Bold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#2563EB"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Matches" Binding="{Binding MatchRecord}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Gewinnrate" Binding="{Binding MatchWinRateFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#16A34A"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="âŒ€ Average" Binding="{Binding OverallAverageFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#DC2626"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Bester Average" Binding="{Binding BestAverageFormatted}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#EA580C"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="180er" Binding="{Binding TotalMaximums}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#7C3AED"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="High Finishes" Binding="{Binding TotalHighFinishes}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0891B2"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="HÃ¶chstes HF" Binding="{Binding HighestHighFinish}" Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0891B2"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="26er" Binding="{Binding TotalScore26}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Letztes Match" Binding="{Binding LastMatchFormatted}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                    <Setter Property="FontSize" Value="11"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- âœ… NEU: Debug-Information -->
        <TextBlock Grid.Row="2" x:Name="DebugInfoBlock" 
                   HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                   Margin="20" FontSize="10" Foreground="Gray"
                   Text="{Binding DebugMessage}"/>
    </Grid>
</UserControl>