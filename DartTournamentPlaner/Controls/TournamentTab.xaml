<UserControl x:Class="DartTournamentPlaner.Controls.TournamentTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournamentPlaner.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="White">
    
    <UserControl.Resources>
        <!-- Converter für Boolean zu Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Moderne Gradient-Hintergründe -->
        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#FDFDFD" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Moderne Schatten-Effekte -->
        <DropShadowEffect x:Key="ModernCardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="16" 
                          Opacity="0.08"/>
        
        <DropShadowEffect x:Key="SubtleShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.05"/>

        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TabStripPlacement" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Tab Headers mit modernem Design -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource HeaderGradient}" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="0,0,0,1"
                                    Effect="{StaticResource SubtleShadow}">
                                <TabPanel x:Name="HeaderPanel" 
                                         IsItemsHost="True" 
                                         Panel.ZIndex="1" 
                                         Background="Transparent"
                                         Margin="12,6,12,0"/>
                            </Border>
                            
                            <!-- Content Area mit Schatten -->
                            <Border Grid.Row="1" 
                                    Background="{StaticResource CardBackgroundBrush}" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="0">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8,8,0,0"
                                    Margin="3,0,3,0"
                                    Padding="16,12,16,12">
                                <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Selected Tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="8" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F0F9FF" Offset="0"/>
                                            <GradientStop Color="#E0F2FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                            
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource SubtleShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" 
                                                          BlurRadius="12" Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#64748B" Offset="0"/>
                        <GradientStop Color="#475569" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF8C00" Offset="0"/>
                        <GradientStop Color="#FF7700" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" BlurRadius="8" 
                                                          Direction="0" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer>
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#DBEAFE" Offset="0"/>
                                            <GradientStop Color="#BFDBFE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8FAFC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F9FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <TabControl Name="MainTabControl" TabStripPlacement="Top" SelectionChanged="MainTabControl_SelectionChanged">
            
            <!-- Tournament Setup Tab -->
            <TabItem Name="SetupTabItem" Header="Turnier-Setup">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="800"/>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Setup Panel -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <!-- Game Rules Button -->
                            <Button DockPanel.Dock="Top" Name="ConfigureRulesButton" Content="⚙️ Regeln konfigurieren" 
                                    Style="{StaticResource SuccessButton}"
                                    Click="ConfigureRulesButton_Click"
                                    Margin="0,0,0,16"/>
                            
                            <!-- Phase Info -->
                            <Border DockPanel.Dock="Top" 
                                    Background="#EFF6FF" 
                                    BorderBrush="#3B82F6" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,16" 
                                    Name="CurrentPhaseInfo">
                                <TextBlock Name="CurrentPhaseText" 
                                           Text="Aktuelle Phase: Gruppenphase" 
                                           FontWeight="SemiBold" 
                                           FontSize="13" 
                                           Foreground="#1E40AF"/>
                            </Border>
                            
                            <!-- Next Phase Button -->
                            <Button DockPanel.Dock="Top" Name="AdvanceToNextPhaseButton" Content="🏆 Nächste Phase starten"
                                    Style="{StaticResource SuccessButton}"
                                    Click="AdvanceToNextPhaseButton_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,16"
                                    Visibility="Collapsed"/>

                            <!-- Reset Buttons -->
                            <Button DockPanel.Dock="Top" Name="ResetMatchesButton" Content="⚠️ Spiele zurücksetzen"
                                    Style="{StaticResource WarningButton}"
                                    Click="ResetMatchesButton_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,12"/>

                            <Button DockPanel.Dock="Top" Name="ResetTournamentButton" Content="🔄 Turnier zurücksetzen"
                                    Style="{StaticResource DangerButton}"
                                    Click="ResetTournamentButton_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,16"/>
                            
                            <!-- Group Management -->
                            <TextBlock DockPanel.Dock="Top" Name="GroupsHeaderText" Text="📁 Gruppen:" 
                                       Margin="0,0,0,12" FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>

                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <Button Name="AddGroupButton" Content="➕ Gruppe hinzufügen" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="AddGroupButton_Click"/>
                                <Button Name="RemoveGroupButton" Content="➖ Gruppe entfernen" 
                                        Style="{StaticResource SecondaryButton}"
                                        Click="RemoveGroupButton_Click"
                                        IsEnabled="False"/>
                            </StackPanel>
                            
                            <ListBox Name="GroupsListBox" 
                                     SelectionChanged="GroupsListBox_SelectionChanged"
                                     Height="180" 
                                     Margin="0,0,0,16"/>
                            
                            <!-- Player Management -->
                            <TextBlock DockPanel.Dock="Top" Name="PlayersHeaderText" Text="👥 Spieler:" 
                                       Margin="0,0,0,12" FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>

                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBox Name="PlayerNameTextBox" 
                                             Width="280" 
                                             Margin="0,0,12,0" 
                                             Text="{Binding NewPlayerName, UpdateSourceTrigger=PropertyChanged}"
                                             KeyDown="PlayerNameTextBox_KeyDown"
                                             IsEnabled="False"/>
                                    <Button Name="AddPlayerButton" Content="➕ Hinzufügen" 
                                            Style="{StaticResource PrimaryButton}"
                                            Click="AddPlayerButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="RemovePlayerButton" Content="➖ Entfernen" 
                                            Style="{StaticResource SecondaryButton}"
                                            Click="RemovePlayerButton_Click"
                                            IsEnabled="False"/>
                                    <Button Name="GenerateMatchesButton" Content="🎯 Spiele generieren" 
                                            Style="{StaticResource SuccessButton}"
                                            Click="GenerateMatchesButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Refresh UI Button -->
                            <Button DockPanel.Dock="Bottom" Name="RefreshUIButton" Content="🔄 UI aktualisieren"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="RefreshUIButton_Click"
                                    ToolTip="Aktualisiert die Benutzeroberfläche und überprüft den Gruppenstatus"
                                    FontSize="11"
                                    Padding="8,6"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Left"/>
                            
                            <ListBox Name="PlayersListBox" 
                                     SelectionChanged="PlayersListBox_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Preview Panel -->
                    <Border Grid.Column="2" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Name="TournamentOverviewHeader" 
                                           Text="Turnier-Übersicht" 
                                           FontWeight="SemiBold" 
                                           FontSize="16" 
                                           Foreground="#374151" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Name="TournamentOverviewText" 
                                           TextWrapping="Wrap" 
                                           VerticalAlignment="Top"
                                           LineHeight="20"
                                           Foreground="#6B7280"
                                           FontSize="13"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Group Phase Tab -->
            <TabItem Name="GroupPhaseTabItem" Header="Gruppenphase">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Groups Selection -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📁" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Name="SelectGroupText" 
                                           Text="Gruppen auswählen:" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="#374151" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <ListBox Name="GroupPhaseGroupsList" 
                                     SelectionChanged="GroupPhaseGroupsList_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Matches and Standings -->
                    <Border Grid.Column="2" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <TabControl Margin="20">
                            <TabItem Header="🎯 Spiele" Name="GamesTabItem">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="⚽" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Name="MatchesHeaderText" 
                                                   Text="Spiele:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="MatchesDataGrid" MouseDoubleClick="MatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="📊 Tabelle" Name="TableTabItem">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="🏆" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Name="StandingsHeaderText" 
                                                   Text="Tabelle:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="StandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Spieler" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pkt" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="S-U-N" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Finals Tab -->
            <TabItem Name="FinalsTabItem" Header="Finalrunde" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Finalists -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="🏆" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Finalisten:" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="#374151" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Finals Reset Button -->
                            <Button DockPanel.Dock="Bottom" Name="ResetFinalsButton" Content="⚠️ Finalrunde zurücksetzen"
                                    Style="{StaticResource DangerButton}"
                                    Click="ResetFinalsButton_Click"
                                    IsEnabled="True"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Stretch"/>
                            
                            <ListBox Name="FinalistsListBox"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Finals Matches -->
                    <Border Grid.Column="2" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <TabControl Margin="20">
                            <TabItem Header="🥇 Finalspiele">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="⚔️" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Finalspiele:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="FinalsMatchesDataGrid" MouseDoubleClick="FinalsMatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="📊 Finale Tabelle">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="🏅" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Finale Platzierung:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="FinalsStandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Spieler" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pkt" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="S-U-N" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Knockout Tab -->
            <TabItem Name="KnockoutTabItem" Header="KO-Runde">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- KO Participants -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="⚔️" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="KO-Teilnehmer:" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="#374151" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- KO Reset Button -->
                            <Button DockPanel.Dock="Bottom" Name="ResetKnockoutButton" Content="⚠️ KO-Phase zurücksetzen"
                                    Style="{StaticResource DangerButton}"
                                    Click="ResetKnockoutButton_Click"
                                    IsEnabled="True"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Stretch"/>
                            
                            <ListBox Name="KnockoutParticipantsListBox"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- KO Matches and Bracket View -->
                    <Border Grid.Column="2" 
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <TabControl Margin="20">
                            <TabItem Header="🌳 Turnierbaum">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Canvas Name="BracketCanvas" Background="White" MinWidth="800" MinHeight="600"/>
                                </ScrollViewer>
                            </TabItem>
                            
                            <TabItem Header="🏆 Winner Bracket">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="🥇" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Winner Bracket:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="KnockoutMatchesDataGrid" 
                                              MouseDoubleClick="KnockoutMatchesDataGrid_MouseDoubleClick"
                                              MouseRightButtonUp="KnockoutDataGrid_MouseRightButtonUp">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Runde" Binding="{Binding RoundDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                            <DataGridTemplateColumn Header="Freilos" Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Name="GiveByeButton" Content="✓ Bye" 
                                                                    Click="GiveByeButton_Click"
                                                                    Tag="{Binding}"
                                                                    Style="{StaticResource SuccessButton}"
                                                                    Padding="4,2" 
                                                                    Margin="2,0"
                                                                    FontSize="10"
                                                                    Visibility="{Binding ShowGiveByeButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                    ToolTip="Freilos vergeben"/>
                                                            <Button Name="UndoByeButton" Content="✗ Undo" 
                                                                    Click="UndoByeButton_Click"
                                                                    Tag="{Binding}"
                                                                    Background="#F59E0B" 
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Padding="4,2" 
                                                                    Margin="2,0"
                                                                    FontSize="10"
                                                                    Visibility="{Binding ShowUndoByeButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                    ToolTip="Freilos rückgängig machen"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Name="LoserBracketTab" Header="🥈 Loser Bracket" Visibility="Collapsed">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="🥈" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Loser Bracket:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   Foreground="#374151" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="LoserBracketDataGrid" 
                                              MouseDoubleClick="LoserBracketDataGrid_MouseDoubleClick"
                                              MouseRightButtonUp="KnockoutDataGrid_MouseRightButtonUp">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Runde" Binding="{Binding RoundDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                            <DataGridTemplateColumn Header="Freilos" Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Name="GiveByeButtonLB" Content="✓ Bye" 
                                                                    Click="GiveByeButton_Click"
                                                                    Tag="{Binding}"
                                                                    Style="{StaticResource SuccessButton}"
                                                                    Padding="4,2" 
                                                                    Margin="2,0"
                                                                    FontSize="10"
                                                                    Visibility="{Binding ShowGiveByeButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                    ToolTip="Freilos vergeben"/>
                                                            <Button Name="UndoByeButtonLB" Content="✗ Undo" 
                                                                    Click="UndoByeButton_Click"
                                                                    Tag="{Binding}"
                                                                    Background="#F59E0B" 
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Padding="4,2" 
                                                                    Margin="2,0"
                                                                    FontSize="10"
                                                                    Visibility="{Binding ShowUndoByeButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                    ToolTip="Freilos rückgängig machen"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Name="LoserBracketTreeTab" Header="🌳 Loser Bracket Baum" Visibility="Collapsed">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Canvas Name="LoserBracketCanvas" Background="White" MinWidth="800" MinHeight="600"/>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- ✅ NEU: Statistiken Tab -->
            <TabItem Name="StatisticsTabItem" Header="📊 Statistiken">
                <Grid Margin="20">
                    <!-- Statistiken-View einbinden -->
                    <local:PlayerStatisticsView x:Name="StatisticsView"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>