                                    IsEnabled="False"
                                    Margin="0,0,0,16"
                                    Visibility="Collapsed"/>

                            <!-- Reset Buttons -->
                            <Button DockPanel.Dock="Top" Name="ResetMatchesButton" Content="â ï¸ Spiele zurÃ¼cksetzen"
                                    Style="{StaticResource WarningButton}"
                                    Click="ResetMatchesButton_Click"
                                    Margin="0,0,0,12"/>

                            <Button DockPanel.Dock="Top" Name="ResetTournamentButton" Content="ð Turnier zurÃ¼cksetzen"
                                    Style="{StaticResource DangerButton}"
                                    Click="ResetTournamentButton_Click"
                                    Margin="0,0,0,16"/>
                            
                            <!-- Group Management -->
                            <TextBlock DockPanel.Dock="Top" Name="GroupsHeaderText" Text="ð Gruppen:" 
