                            </StackPanel>
                            
                            <ListBox Name="GroupsListBox" 
                                     SelectionChanged="GroupsListBox_SelectionChanged"
                                     Height="180" 
                                     Margin="0,0,0,16"/>
                            
                            <!-- Player Management -->
                            <TextBlock DockPanel.Dock="Top" Name="PlayersHeaderText" Text="ð¥ Spieler:" 
                                       Margin="0,0,0,12" FontWeight="SemiBold" FontSize="15"/>

                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBox Name="PlayerNameTextBox" 
                                             Width="280" 
                                             Margin="0,0,12,0" 
                                             Text="{Binding NewPlayerName, UpdateSourceTrigger=PropertyChanged}"
                                             KeyDown="PlayerNameTextBox_KeyDown"
                                             IsEnabled="False"/>
                                    <Button Name="AddPlayerButton" Content="â HinzufÃ¼gen" 
                                            Style="{StaticResource PrimaryButton}"
                                            Click="AddPlayerButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="RemovePlayerButton" Content="â Entfernen" 
                                            Style="{StaticResource SecondaryButton}"
                                            Click="RemovePlayerButton_Click"
                                            IsEnabled="False"/>
                                    <Button Name="GenerateMatchesButton" Content="ð¯ Spiele generieren" 
                                            Style="{StaticResource SuccessButton}"
                                            Click="GenerateMatchesButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Refresh UI Button -->
                            <Button DockPanel.Dock="Bottom" Name="RefreshUIButton" Content="ð UI aktualisieren"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="RefreshUIButton_Click"
                                    ToolTip="Aktualisiert die BenutzeroberflÃ¤che und Ã¼berprÃ¼ft den Gruppenstatus"
                                    FontSize="11"
                                    Padding="8,6"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Left"/>
                            
                            <ListBox Name="PlayersListBox" 
                                     SelectionChanged="PlayersListBox_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Preview Panel -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="ð" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Name="TournamentOverviewHeader" 
                                           Text="Turnier-Ãbersicht" 
                                           FontWeight="SemiBold" 
                                           FontSize="16" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Name="TournamentOverviewText" 
                                           TextWrapping="Wrap" 
                                           VerticalAlignment="Top"
                                           LineHeight="20"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontSize="13"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Group Phase Tab -->
            <TabItem Name="GroupPhaseTabItem" Header="Gruppenphase">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Groups Selection -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="ð" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Name="SelectGroupText" 
                                           Text="Gruppen auswÃ¤hlen:" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <ListBox Name="GroupPhaseGroupsList" 
                                     SelectionChanged="GroupPhaseGroupsList_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Matches and Standings -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <TabControl Margin="20">
                            <TabItem Header="ð¯ Spiele" Name="GamesTabItem">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="â½" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Name="MatchesHeaderText" 
                                                   Text="Spiele:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="MatchesDataGrid" MouseDoubleClick="MatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="ð Tabelle" Name="TableTabItem">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="ð" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Name="StandingsHeaderText" 
                                                   Text="Tabelle:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="StandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Spieler" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pkt" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="S-U-N" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Finals Tab -->
            <TabItem Name="FinalsTabItem" Header="Finalrunde" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Finalists -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <DockPanel Margin="20">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="ð" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Finalisten:" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Finals Reset Button -->
                            <Button DockPanel.Dock="Bottom" Name="ResetFinalsButton" Content="â ï¸ Finalrunde zurÃ¼cksetzen"
                                    Style="{StaticResource DangerButton}"
                                    Click="ResetFinalsButton_Click"
                                    IsEnabled="True"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Stretch"/>
                            
                            <ListBox Name="FinalistsListBox"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Finals Matches -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource ModernCardShadow}">
                        <TabControl Margin="20">
                            <TabItem Header="ð¥ Finalspiele">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="âï¸" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Finalspiele:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="FinalsMatchesDataGrid" MouseDoubleClick="FinalsMatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Ergebnis" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="ð Finale Tabelle">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,12,0,16">
                                        <TextBlock Text="ð" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Finale Platzierung:" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="15" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataGrid Name="FinalsStandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Spieler" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pkt" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="S-U-N" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
