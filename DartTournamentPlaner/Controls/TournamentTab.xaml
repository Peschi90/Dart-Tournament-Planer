<UserControl x:Class="DartTournamentPlaner.Controls.TournamentTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournamentPlaner.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="White">
    
    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#757575"/>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
			    
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <TabControl Name="MainTabControl" TabStripPlacement="Top" SelectionChanged="MainTabControl_SelectionChanged">
            
            <!-- Tournament Setup Tab -->
            <TabItem Name="SetupTabItem" Header="Turnier-Setup">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="800"/>
                        <ColumnDefinition Width="0"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Setup Panel -->
                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DockPanel Margin="15">
                            <!-- Game Rules Button -->
                            <Button DockPanel.Dock="Top" Name="ConfigureRulesButton" Content="Configure Rules" 
                                    Style="{StaticResource SuccessButton}"
                                    Click="ConfigureRulesButton_Click"
                                    Margin="0,0,0,15"/>
                            
                            <!-- Phase Info -->
                            <Border DockPanel.Dock="Top" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                                    CornerRadius="4" Padding="8" Margin="0,0,0,15" Name="CurrentPhaseInfo">
                                <TextBlock Name="CurrentPhaseText" Text="Aktuelle Phase: Gruppenphase" 
                                           FontWeight="Medium" FontSize="12" Foreground="#1976D2"/>
                            </Border>
                            
                            <!-- Next Phase Button -->
                            <Button DockPanel.Dock="Top" Name="AdvanceToNextPhaseButton" Content="🏆 Nächste Phase starten"
                                    Style="{StaticResource SuccessButton}"
                                    Click="AdvanceToNextPhaseButton_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,15"
                                    Visibility="Collapsed"/>
                            
                            <!-- Reset Tournament Button -->
                            <Button DockPanel.Dock="Top" Name="ResetTournamentButton" Content="🔄 Turnier zurücksetzen"
                                    Click="ResetTournamentButton_Click"
                                    IsEnabled="True"
                                    Margin="0,0,0,15"
                                    Padding="8,8"
                                    Background="#FF6B35"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="Medium">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E55A2B"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#CC4E24"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- Group Management -->
                            <TextBlock DockPanel.Dock="Top" Name="GroupsHeaderText" Text="Gruppen:" 
                                       Margin="0,0,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                            

                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Name="AddGroupButton" Content="Add Group" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="AddGroupButton_Click"/>
                                <Button Name="RemoveGroupButton" Content="Remove Group" 
                                        Style="{StaticResource SecondaryButton}"
                                        Click="RemoveGroupButton_Click"
                                        IsEnabled="False"/>
                            </StackPanel>
                            
                            <ListBox Name="GroupsListBox" SelectionChanged="GroupsListBox_SelectionChanged"
                                     Height="180" Margin="0,0,0,15"/>
                            
                            <!-- Player Management -->
                            <TextBlock DockPanel.Dock="Top" Name="PlayersHeaderText" Text="Players:" 
                                       Margin="0,0,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                            

                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBox Name="PlayerNameTextBox" Width="250" Margin="0,0,10,0" 
                                             Text="{Binding NewPlayerName, UpdateSourceTrigger=PropertyChanged}"
                                             KeyDown="PlayerNameTextBox_KeyDown"
                                             IsEnabled="False"/>
                                    <Button Name="AddPlayerButton" Content="Add Player" 
                                            Style="{StaticResource PrimaryButton}"
                                            Click="AddPlayerButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="RemovePlayerButton" Content="Remove Player" 
                                            Style="{StaticResource SecondaryButton}"
                                            Click="RemovePlayerButton_Click"
                                            IsEnabled="False"/>
                                    <Button Name="GenerateMatchesButton" Content="Generate Matches" 
                                            Style="{StaticResource SuccessButton}"
                                            Click="GenerateMatchesButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Reset Matches Button -->
                            <Button DockPanel.Dock="Bottom" Name="ResetMatchesButton" Content="⚠ Spiele zurücksetzen" 
                                    Click="ResetMatchesButton_Click"
                                    IsEnabled="False"
                                    FontSize="10"
                                    Padding="6,4"
                                    Margin="0,10,0,0"
                                    Background="#E53935"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D32F2F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#B71C1C"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <ListBox Name="PlayersListBox" SelectionChanged="PlayersListBox_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Preview Panel -->
                    <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DockPanel Margin="15">
                            <TextBlock DockPanel.Dock="Top" Text="Turnier-Übersicht" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Name="TournamentOverviewText" TextWrapping="Wrap" VerticalAlignment="Top"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Group Phase Tab -->
            <TabItem Name="GroupPhaseTabItem" Header="Gruppenphase">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Groups Selection -->
                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DockPanel Margin="15">
                            <TextBlock DockPanel.Dock="Top" Text="Gruppen auswählen:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <ListBox Name="GroupPhaseGroupsList" SelectionChanged="GroupPhaseGroupsList_SelectionChanged"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Matches and Standings -->
                    <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <TabControl Margin="15">
                            <TabItem Header="Spiele">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Name="MatchesHeaderText" Text="Spiele:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="MatchesDataGrid" MouseDoubleClick="MatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Result" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="Tabelle">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Name="StandingsHeaderText" Text="Tabelle:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="StandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Player" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pts" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="W-D-L" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Finals Tab -->
            <TabItem Name="FinalsTabItem" Header="Finalrunde" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Finalists -->
                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DockPanel Margin="15">
                            <TextBlock DockPanel.Dock="Top" Text="Finalisten:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <ListBox Name="FinalistsListBox"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Finals Matches -->
                    <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <TabControl Margin="15">
                            <TabItem Header="Finalspiele">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Text="Finalspiele:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="FinalsMatchesDataGrid" MouseDoubleClick="FinalsMatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Result" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Header="Finale Tabelle">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Text="Finale Platzierung:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="FinalsStandingsDataGrid">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Pos" Binding="{Binding Position}" Width="50"/>
                                            <DataGridTextColumn Header="Player" Binding="{Binding Player.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Pts" Binding="{Binding Points}" Width="50"/>
                                            <DataGridTextColumn Header="W-D-L" Binding="{Binding RecordDisplay}" Width="80"/>
                                            <DataGridTextColumn Header="Sets" Binding="{Binding SetRecordDisplay}" Width="70"/>
                                            <DataGridTextColumn Header="Legs" Binding="{Binding LegRecordDisplay}" Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Knockout Tab -->
            <TabItem Name="KnockoutTabItem" Header="KO-Runde" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- KO Participants -->
                    <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <DockPanel Margin="15">
                            <TextBlock DockPanel.Dock="Top" Text="KO-Teilnehmer:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            
                            <!-- KO Reset Button -->
                            <Button DockPanel.Dock="Bottom" Name="ResetKnockoutButton" Content="⚠ KO-Phase zurücksetzen"
                                    Click="ResetKnockoutButton_Click"
                                    IsEnabled="True"
                                    FontSize="10"
                                    Padding="6,4"
                                    Margin="0,10,0,0"
                                    Background="#E53935"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Stretch">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D32F2F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#B71C1C"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <ListBox Name="KnockoutParticipantsListBox"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- KO Matches and Bracket View -->
                    <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <TabControl Margin="15">
                            <TabItem Header="Turnierbaum">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Canvas Name="BracketCanvas" Background="White" MinWidth="800" MinHeight="600"/>
                                </ScrollViewer>
                            </TabItem>
                            
                            <TabItem Header="Winner Bracket">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Text="Winner Bracket:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="KnockoutMatchesDataGrid" MouseDoubleClick="KnockoutMatchesDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Runde" Binding="{Binding RoundDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Result" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Name="LoserBracketTab" Header="Loser Bracket" Visibility="Collapsed">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Top" Text="Loser Bracket:" 
                                               Margin="0,10,0,10" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                                    <DataGrid Name="LoserBracketDataGrid" MouseDoubleClick="LoserBracketDataGrid_MouseDoubleClick">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Runde" Binding="{Binding RoundDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Match" Binding="{Binding DisplayName}" Width="*"/>
                                            <DataGridTextColumn Header="Result" Binding="{Binding ScoreDisplay}" Width="100"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </TabItem>
                            
                            <TabItem Name="LoserBracketTreeTab" Header="Loser Bracket Baum" Visibility="Collapsed">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Canvas Name="LoserBracketCanvas" Background="White" MinWidth="800" MinHeight="600"/>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>