<Window x:Class="DartTournamentPlaner.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Help - Dart Tournament Planner" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800">

    <Window.Resources>
        <!-- Modern Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="16" 
                          Opacity="0.08"/>

        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <!-- Modern Gradient Backgrounds -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#2563EB" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern TreeView Style -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <!-- Modern TreeViewItem Style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="Border" Grid.Row="0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="8">
                                <ContentPresenter x:Name="PART_Header"
                                                ContentSource="Header"
                                                VerticalAlignment="Center"/>
                            </Border>

                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1"
                                            Visibility="Collapsed"
                                            Margin="20,4,0,0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#EFF6FF" Offset="0"/>
                                            <GradientStop Color="#DBEAFE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F9FF"/>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ScrollViewer Style -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Modern TextBlock Style for Content -->
        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main container with modern design -->
    <Border Background="{StaticResource MainBackgroundBrush}" 
            CornerRadius="16" 
            Effect="{StaticResource HeaderShadow}"
            Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with modern gradient design -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderGradient}" 
                    CornerRadius="16,16,0,0" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,0,0,1" 
                    Padding="32,24"
                    Effect="{StaticResource HeaderShadow}">
                <StackPanel>
                    <TextBlock x:Name="TitleTextBlock" Text="?? Help - Dart Tournament Planner"
                               FontSize="28" FontWeight="Bold" 
                               Foreground="#1F2937" Margin="0,0,0,8"/>
                    <TextBlock Text="Comprehensive guide for using the Dart Tournament Planner"
                               FontSize="16" Foreground="#6B7280"/>
                </StackPanel>
            </Border>

            <!-- Main Content Area with white background -->
            <Border Grid.Row="1" Background="White" Margin="0">
                <Grid Margin="32,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Navigation Tree -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource CardShadow}">
                        <TreeView x:Name="HelpNavigationTree" 
                                  BorderThickness="0"
                                  SelectedItemChanged="HelpNavigationTree_SelectedItemChanged"
                                  Margin="8">
                            <TreeViewItem x:Name="GeneralItem" Header="?? General Usage" IsExpanded="True" IsSelected="True"/>
                            <TreeViewItem x:Name="TournamentSetupItem" Header="?? Tournament Setup"/>
                            <TreeViewItem x:Name="GroupManagementItem" Header="?? Group Management"/>
                            <TreeViewItem x:Name="GameRulesItem" Header="?? Game Rules"/>
                            <TreeViewItem x:Name="MatchesItem" Header="?? Matches &amp; Results"/>
                            <TreeViewItem x:Name="TournamentPhasesItem" Header="?? Tournament Phases"/>
                            <TreeViewItem x:Name="MenusItem" Header="?? Menus &amp; Functions"/>
                            <TreeViewItem x:Name="LicenseSystemItem" Header="?? License System"/>
                            <TreeViewItem x:Name="ApiIntegrationItem" Header="?? API Integration"/>
                            <TreeViewItem x:Name="TournamentHubItem" Header="?? Tournament Hub"/>
                            <TreeViewItem x:Name="StatisticsItem" Header="?? Statistics"/>
                            <TreeViewItem x:Name="PrintingItem" Header="??? Printing"/>
                            <TreeViewItem x:Name="TipsItem" Header="?? Tips &amp; Tricks"/>
                        </TreeView>
                    </Border>

                    <!-- Content Area -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="12"
                            Effect="{StaticResource CardShadow}">
                        <ScrollViewer x:Name="ContentScrollViewer"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="24"
                                      BorderThickness="0">
                            <TextBlock x:Name="ContentTextBlock"
                                       Style="{StaticResource ContentTextStyle}"
                                       Text="Welcome to the Dart Tournament Planner help system. Select a topic from the left to learn more about specific features and functions."/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="0,0,16,16"
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    Padding="32,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CloseButton" Content="Close" Style="{StaticResource ModernButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>