<Window x:Class="DartTournamentPlaner.Views.TournamentOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DartTournamentPlaner.Controls"
        mc:Ignorable="d"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Dart Tournament Planner - Overview"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="False"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- Moderne Gradient-Hintergruende -->
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1E40AF" Offset="0"/>
            <GradientStop Color="#1E3A8A" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#FDFDFD" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Moderne Schatten-Effekte -->
        <DropShadowEffect x:Key="ModernCardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="8" 
                          BlurRadius="20" 
                          Opacity="0.12"/>
        
        <DropShadowEffect x:Key="SubtleShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Opacity="0.06"/>

        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TabStripPlacement" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Tab Headers mit modernem Design -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource CardBackgroundBrush}" 
                                    BorderBrush="#E2E8F0" 
                                    BorderThickness="0,0,0,1"
                                    Effect="{StaticResource SubtleShadow}">
                                <TabPanel x:Name="HeaderPanel" 
                                         IsItemsHost="True" 
                                         Panel.ZIndex="1" 
                                         Background="Transparent"
                                         Margin="20,10,20,0"/>
                            </Border>
                            
                            <!-- Content Area -->
                            <Border Grid.Row="1" 
                                    Background="{StaticResource CardBackgroundBrush}" 
                                    BorderThickness="0">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabItem Style fuer Tournament Classes -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8,8,0,0"
                                    Margin="4,0,4,0"
                                    Padding="20,14,20,14">
                                <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Selected Tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                                <Setter Property="Panel.ZIndex" Value="100"/>
                                <Setter Property="Foreground" Value="#1E40AF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="10" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F0F9FF" Offset="0"/>
                                            <GradientStop Color="#E0F2FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                            
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource SubtleShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" 
                                                          BlurRadius="15" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#64748B" Offset="0"/>
                        <GradientStop Color="#475569" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="MinWidth" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    <!-- Hauptcontainer mit modernem Glaseffekt -->
    <Border Background="{StaticResource WindowBackgroundBrush}">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header mit Gradient und Controls -->
            <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" 
                    Effect="{StaticResource ModernCardShadow}">
                <Grid Margin="24,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Title and Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="TV" FontSize="24" Margin="0,0,16,0" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold" Foreground="White"/>
                        <StackPanel>
                            <TextBlock Name="OverviewModeText" Text="Tournament Overview Mode" 
                                       FontSize="20" FontWeight="SemiBold" 
                                       Foreground="White" VerticalAlignment="Center"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Side Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Control Buttons -->
                        <Button Name="StartStopButton" Content="Start" 
                                Style="{StaticResource SuccessButton}"
                                Click="StartStop_Click" 
                                ToolTip="Starts or stops automatic tournament class cycling"/>
                        
                        <Button Name="ConfigureButton" Content="Konfigurieren" 
                                Style="{StaticResource SecondaryButton}"
                                Click="Configure_Click" 
                                ToolTip="Opens configuration options for the overview display"/>
                        
                        <Button Name="CloseButton" Content="X" 
                                Style="{StaticResource IconButton}"
                                Background="#EF4444"
                                Click="Close_Click"
                                ToolTip="Closes the overview window"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                    Margin="16,0,16,16" CornerRadius="12"
                    Effect="{StaticResource ModernCardShadow}">
                <TabControl Name="MainTabControl" Margin="0"/>
            </Border>

            <!-- Modern Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource CardBackgroundBrush}" 
                    BorderBrush="#E2E8F0" BorderThickness="0,1,0,0"
                    Effect="{StaticResource SubtleShadow}">
                <Grid Margin="24,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#EFF6FF" BorderBrush="#3B82F6" 
                                BorderThickness="1" CornerRadius="6" 
                                Padding="8,4" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="i" FontSize="12" 
                                           Foreground="#3B82F6" 
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Name="StatusTextBlock" Text="Ready" 
                                           FontSize="13" FontWeight="Medium"
                                           Foreground="#1E40AF"
                                           FontFamily="Segoe UI"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Name="CurrentDisplayTextBlock" Text="Manual Mode" 
                                   FontSize="13" Foreground="#6B7280" 
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI"/>
                    </StackPanel>

                    <!-- Right Side Timer and Info -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#F3F4F6" CornerRadius="6" 
                                Padding="10,4" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="t" FontSize="12" 
                                           Margin="0,0,6,0" VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                                <TextBlock Name="TimerTextBlock" Text="--:--" 
                                           FontFamily="Consolas" FontSize="13" 
                                           FontWeight="Medium" Foreground="#374151"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Name="CycleInfoTextBlock" Text="Stopped" 
                                   FontSize="13" Foreground="#6B7280" 
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe UI"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>