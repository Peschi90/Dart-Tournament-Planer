<Window x:Class="DartTournamentPlaner.Views.HubRegistrationErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration Failed" Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Error Gradient -->
        <LinearGradientBrush x:Key="ErrorGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFEF4444" Offset="0"/>
            <GradientStop Color="#FFDC2626" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogErrorGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#EF4444" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource DialogErrorGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âŒ" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Tournament Registration Failed" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="32,24" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center">
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="MessageText"
                               Text="The tournament registration with the Tournament Hub failed."
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="#374151"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24"/>

                    <!-- Error Details -->
                    <Border Background="#FEF2F2" 
                            BorderBrush="#EF4444" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock x:Name="ErrorDetailsTitle"
                                       Text="ðŸ” Error Details"
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#B91C1C" 
                                       Margin="0,0,0,12"/>
                            
                            <!-- Error Code -->
                            <Grid Margin="0,0,0,8" x:Name="ErrorCodeSection">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Code:" 
                                           FontWeight="SemiBold" 
                                           FontSize="13" 
                                           Foreground="#B91C1C"/>
                                <TextBlock x:Name="ErrorCodeText" 
                                           Grid.Column="1"
                                           Text="HUB_CONNECTION_FAILED" 
                                           FontSize="13" 
                                           Foreground="#B91C1C"
                                           FontFamily="Consolas"/>
                            </Grid>

                            <!-- Error Message -->
                            <TextBlock Text="Message:" 
                                       FontWeight="SemiBold" 
                                       FontSize="13" 
                                       Foreground="#B91C1C" 
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="ErrorMessageText" 
                                       Text="Unable to connect to Tournament Hub server. Please check your network connection." 
                                       FontSize="13" 
                                       Foreground="#B91C1C"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <!-- Technical Details (expandable) -->
                            <Expander x:Name="TechnicalDetailsExpander" 
                                      Header="Technical Details" 
                                      FontSize="12" 
                                      Foreground="#B91C1C"
                                      IsExpanded="False">
                                <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="TechnicalDetailsText"
                                               Text="Stack trace and technical information..."
                                               FontFamily="Consolas"
                                               FontSize="10"
                                               Foreground="#7F1D1D"
                                               TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Expander>
                        </StackPanel>
                    </Border>

                    <!-- Solutions -->
                    <Border Background="#FFFBEB" 
                            BorderBrush="#F59E0B" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock x:Name="SolutionsTitle"
                                       Text="ðŸ’¡ Possible Solutions"
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#92400E" 
                                       Margin="0,0,0,12"/>
                            <TextBlock x:Name="SolutionsText"
                                       TextWrapping="Wrap" 
                                       FontSize="13" 
                                       Foreground="#92400E" 
                                       LineHeight="20">
                                <Run Text="- Check your internet connection"/>
                                <LineBreak/>
                                <Run Text="- Verify Hub URL in settings"/>
                                <LineBreak/>
                                <Run Text="- Try again in a few moments"/>
                                <LineBreak/>
                                <Run Text="- Contact support if problem persists"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Action Message -->
                    <TextBlock x:Name="ActionText"
                               Text="You can continue using the tournament locally or try to register again."
                               FontSize="14"
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CloseButton" 
                            Content="âŒ Close" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CloseButton_Click"/>
                    
                    <Button x:Name="RetryButton" 
                            Content="ðŸ”„ Retry" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="RetryButton_Click"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>