<Window x:Class="DartTournamentPlaner.Views.StartupSplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DartTournamentPlaner.Controls"
        Title="Dart Tournament Planner"
        Height="370" Width="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <!-- Card Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="8" 
                          BlurRadius="20" 
                          Opacity="0.15"/>
    </Window.Resources>

    <!-- Moderne Splash Screen mit LoadingSpinner -->
    <Border CornerRadius="16" 
            BorderThickness="1"
            BorderBrush="#E5E7EB"
            Effect="{StaticResource CardShadow}">
        
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F8FAFC" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header mit App-Icon und Titel -->
            <Border Grid.Row="0" 
                    Padding="24,20,24,16"
                    Background="Transparent">
                <StackPanel HorizontalAlignment="Center">
                    <!-- App Icon (large version) -->
                    <Border Width="64" Height="64" 
                            CornerRadius="12" 
                            Margin="0,0,0,16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#3B82F6" Offset="0"/>
                                <GradientStop Color="#1D4ED8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#3B82F6" Direction="0" ShadowDepth="0" 
                                              BlurRadius="12" Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸŽ¯" 
                                   FontSize="28" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </Border>

                    <!-- App-Titel -->
                    <TextBlock Name="AppTitleBlock"
                               Text="Dart Tournament Planner"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>

                    <!-- Untertitel -->
                    <TextBlock Name="AppSubtitleBlock"
                               Text="Moderne Turnierverwaltung"
                               FontSize="13"
                               Foreground="#64748B"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Loading Spinner Bereich -->
            <Grid Grid.Row="1" 
                  Margin="24,20,24,20"
                  VerticalAlignment="Center">
                <controls:LoadingSpinner x:Name="MainLoadingSpinner"
                                         IsSpinnerVisible="True"
                                         LoadingText="Wird geladen..."
                                         HorizontalAlignment="Center"/>
            </Grid>

            <!-- Status-Text -->
            <Border Grid.Row="2" 
                    Padding="24,0,24,16">
                <TextBlock Name="StatusTextBlock"
                           Text="Starte Anwendung..."
                           FontSize="12"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"/>
            </Border>

            <!-- Footer mit Versionsinformationen -->
            <Border Grid.Row="3" 
                    Background="#F8FAFC"
                    Padding="16,12"
                    CornerRadius="0,0,16,16"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Name="VersionTextBlock"
                               Text="Version 1.0.0"
                               FontSize="10"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"/>
                    <Rectangle Width="1" Height="12" 
                               Fill="#D1D5DB" 
                               Margin="8,0"/>
                    <TextBlock Name="CopyrightTextBlock"
                               Text="&copy; 2025 by I3uLL3t"
                               FontSize="10"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>