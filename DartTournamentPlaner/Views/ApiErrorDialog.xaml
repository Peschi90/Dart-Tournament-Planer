<Window x:Class="DartTournamentPlaner.Views.ApiErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API Connection Error" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Error Gradient -->
        <LinearGradientBrush x:Key="ErrorGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFEF4444" Offset="0"/>
            <GradientStop Color="#FFDC2626" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ErrorGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#EF4444" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource ErrorGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âš ï¸" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="API Connection Error" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="32,24" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" MaxWidth="400">
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="MessageText"
                               Text="An error occurred while connecting to the API service."
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="#374151"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24"/>

                    <!-- Error Details -->
                    <Border x:Name="ErrorDetailsSection"
                            Background="#FEF2F2" 
                            BorderBrush="#EF4444" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock x:Name="ErrorDetailsTitle"
                                       Text="ðŸ” Error Details"
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#B91C1C" 
                                       Margin="0,0,0,12"/>
                            
                            <!-- Error Code -->
                            <StackPanel x:Name="ErrorCodeSection" Margin="0,0,0,8">
                                <TextBlock Text="Error Code:" 
                                           FontWeight="SemiBold" 
                                           FontSize="13" 
                                           Foreground="#B91C1C"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="ErrorCodeText" 
                                           Text="" 
                                           FontSize="12" 
                                           Foreground="#B91C1C"
                                           FontFamily="Consolas"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Error Message Detail -->
                            <TextBlock Text="Details:" 
                                       FontWeight="SemiBold" 
                                       FontSize="13" 
                                       Foreground="#B91C1C"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="ErrorDetailsText" 
                                       Text="" 
                                       FontSize="12" 
                                       Foreground="#B91C1C"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Possible Solutions -->
                    <Border Background="#FEF9C3" 
                            BorderBrush="#F59E0B" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="SolutionsTitle"
                                       Text="ðŸ’¡ Possible Solutions"
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#92400E" 
                                       Margin="0,0,0,12"/>
                            <TextBlock x:Name="SolutionsText"
                                       TextWrapping="Wrap" 
                                       FontSize="13" 
                                       Foreground="#92400E" 
                                       LineHeight="20">
                                <Run Text="- Check your internet connection"/>
                                <LineBreak/>
                                <Run Text="- Verify API server is running"/>
                                <LineBreak/>
                                <Run Text="- Check firewall and security settings"/>
                                <LineBreak/>
                                <Run Text="- Try again in a few moments"/>
                                <LineBreak/>
                                <Run Text="- Contact support if the problem persists"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Technical Details Expander -->
                    <Expander x:Name="TechnicalDetailsExpander" Header="Technical Details" 
                              Margin="0,0,0,16"
                              FontSize="12" 
                              Foreground="#6B7280">
                        <TextBlock x:Name="TechnicalDetailsText" 
                                   Text="" 
                                   FontSize="10" 
                                   FontFamily="Consolas"
                                   Foreground="#6B7280" 
                                   TextWrapping="Wrap"
                                   Margin="8"/>
                    </Expander>

                    <!-- Action Message -->
                    <TextBlock x:Name="ActionText"
                               Text="You can continue using the application in offline mode or try to reconnect."
                               FontSize="14"
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CloseButton" 
                            Content="âŒ Close" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CloseButton_Click"/>
                    
                    <Button x:Name="RetryButton" 
                            Content="ðŸ”„ Retry" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="RetryButton_Click"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>