<Window x:Class="DartTournamentPlaner.Views.HubTournamentSyncDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hub Sync Daten" Height="560" Width="880"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="Black" Direction="270" ShadowDepth="4" BlurRadius="16" Opacity="0.1"/>
        <DropShadowEffect x:Key="HeaderShadow" Color="Black" Direction="270" ShadowDepth="2" BlurRadius="12" Opacity="0.1"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogPrimaryGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DialogInfoGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}" Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MainBackgroundBrush}" CornerRadius="16" Effect="{StaticResource HeaderShadow}" Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource DialogInfoGradient}"
                    CornerRadius="16,16,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,16">
                <StackPanel>
                    <TextBlock Text="Neue Hub-Sync-Daten" FontSize="22" FontWeight="Bold"/>
                    <TextBlock x:Name="SummaryText" Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}">
                <ScrollViewer Padding="18" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Lizenzschluessel" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="LicenseText" Margin="0,4,0,8"/>

                                    <TextBlock Text="Turnier" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TournamentText" Margin="0,4,0,8"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Grid.Column="1">
                                    <TextBlock Text="Statistik" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CountsText" Margin="0,4,0,8"/>

                                    <TextBlock Text="Quelle" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="SourceText" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Padding="0">
                            <TextBox x:Name="JsonPreview" Margin="0" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"
                                     IsReadOnly="True" FontFamily="Consolas" Background="{DynamicResource BackgroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0" Padding="12"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="0,0,16,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="In Planner uebernehmen" Width="200" Style="{StaticResource PrimaryButton}" Click="Import_Click"/>
                    <Button Content="Schliessen" Width="130" Style="{StaticResource SecondaryButton}" Click="Close_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
