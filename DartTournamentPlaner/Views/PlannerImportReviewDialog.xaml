<Window x:Class="DartTournamentPlaner.Views.PlannerImportReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Import" Height="720" Width="920"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogSuccessGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    <Border Background="White" CornerRadius="16" BorderBrush="#E5E7EB" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource DialogSuccessGradient}" CornerRadius="16,16,0,0" Padding="28,18">
                <StackPanel>
                    <TextBlock x:Name="HeaderTitle" Text="Review import" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock x:Name="HeaderSubtitle" Text="Review metadata, rules and players" FontSize="13" Foreground="{DynamicResource TextBrush}" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" Margin="24,18" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="MetadataLabel" Text="Metadata" FontSize="14" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,6"/>
                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Name" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151"/>
                            <TextBlock Text="{Binding Summary.Name}" Grid.Row="0" Grid.Column="1" Foreground="#111827"/>

                            <TextBlock Text="ID" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.TournamentId}" Grid.Row="1" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0" FontFamily="Consolas"/>

                            <TextBlock Text="License" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.LicenseKey}" Grid.Row="2" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                            <TextBlock Text="Location" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.Location}" Grid.Row="3" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                            <TextBlock Text="Start" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.StartDate}" Grid.Row="4" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                            <TextBlock Text="Status" Grid.Row="5" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.Status}" Grid.Row="5" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                            <TextBlock Text="Updated" Grid.Row="6" Grid.Column="0" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Summary.UpdatedAt}" Grid.Row="6" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>
                        </Grid>
                    </Border>

                    <TextBlock x:Name="ClassesLabel" Text="Classes" FontSize="14" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,6"/>
                    <ItemsControl ItemsSource="{Binding Classes}" Margin="0,0,0,12">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text=" - " Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding PlayerCount}" Foreground="#6B7280"/>
                                        <TextBlock Text=" players" Foreground="#6B7280"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock x:Name="GameRulesLabel" Text="Game rules" FontSize="14" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,6"/>
                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="180">
                            <TextBlock x:Name="GameRulesTextBlock" Text="{Binding GameRulesText}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="#111827"/>
                        </ScrollViewer>
                    </Border>

                    <TextBlock x:Name="PlayersLabel" Text="Players" FontSize="14" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,6"/>
                    <DataGrid ItemsSource="{Binding Participants}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0,0,0,12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First name" Binding="{Binding FirstName}" Width="*"/>
                            <DataGridTextColumn Header="Last name" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="120"/>
                            <DataGridTextColumn Header="Group" Binding="{Binding GroupName}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" CornerRadius="0,0,16,16" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BackButton" Content="Back" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" Click="BackButton_Click"/>
                    <Button x:Name="ImportButton" Content="Import" Style="{StaticResource PrimaryButton}" Click="ImportButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
