<Window x:Class="DartTournamentPlaner.Views.PowerScoringPlayerDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Details" Height="750" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- PowerScoring Gradient (Purple/Blue) -->
        <LinearGradientBrush x:Key="PowerScoringGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#6366F1" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PowerScoringGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#8B5CF6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PowerScoringGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Player Details" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="32,24">
                <StackPanel>
                    
                    <!-- Player Stats Card -->
                    <Border Background="#F5F3FF" 
                            BorderBrush="#8B5CF6" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ“ˆ Statistics" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="#6B21A8" 
                                           Margin="0,0,0,12"/>
                                
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Total Score" 
                                               FontSize="11" 
                                               Foreground="#6B7280"/>
                                    <TextBlock x:Name="TotalScoreText" 
                                               Text="0" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#6B21A8"/>
                                </StackPanel>
                                
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Average" 
                                               FontSize="11" 
                                               Foreground="#6B7280"/>
                                    <TextBlock x:Name="AverageText" 
                                               Text="0.00" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#6B21A8"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="ðŸŽ¯ Performance" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="#6B21A8" 
                                           Margin="0,0,0,12"/>
                                
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Highest Throw" 
                                               FontSize="11" 
                                               Foreground="#6B7280"/>
                                    <TextBlock x:Name="HighestThrowText" 
                                               Text="0" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#6B21A8"/>
                                </StackPanel>
                                
                                <StackPanel>
                                    <TextBlock Text="Total Darts" 
                                               FontSize="11" 
                                               Foreground="#6B7280"/>
                                    <TextBlock x:Name="TotalDartsText" 
                                               Text="0" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#6B21A8"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Session Info Card -->
                    <Border Background="#EFF6FF" 
                            BorderBrush="#3B82F6" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ Session Info" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#1E40AF" 
                                       Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Rounds:" 
                                           FontSize="13" 
                                           Foreground="#1E40AF" 
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="RoundsText" 
                                           Grid.Row="0" Grid.Column="1" 
                                           Text="0" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1E40AF" 
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Duration:" 
                                           FontSize="13" 
                                           Foreground="#1E40AF" 
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="DurationText" 
                                           Grid.Row="1" Grid.Column="1" 
                                           Text="N/A" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1E40AF" 
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Submitted via:" 
                                           FontSize="13" 
                                           Foreground="#1E40AF"/>
                                <TextBlock x:Name="SubmittedViaText" 
                                           Grid.Row="2" Grid.Column="1" 
                                           Text="N/A" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1E40AF"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Throw History Card -->
                    <Border Background="#FEFCE8" 
                            BorderBrush="#EAB308" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ² Throw History" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#854D0E" 
                                       Margin="0,0,0,12"/>
                            
                            <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="HistoryItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                                                    BorderBrush="#E5E7EB" 
                                                    BorderThickness="1" 
                                                    CornerRadius="6" 
                                                    Padding="12" 
                                                    Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding RoundLabel}" 
                                                               FontWeight="Bold" 
                                                               FontSize="13" 
                                                               Foreground="#854D0E"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Throws}" 
                                                               FontSize="12" 
                                                               FontFamily="Consolas" 
                                                               Foreground="#6B7280" 
                                                               TextWrapping="Wrap"/>
                                                    
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding TotalLabel}" 
                                                               FontSize="13" 
                                                               FontWeight="Bold" 
                                                               Foreground="#059669" 
                                                               HorizontalAlignment="Right"/>
                                                    
                                                    <TextBlock Grid.Column="3" 
                                                               Text="{Binding TimeLabel}" 
                                                               FontSize="11" 
                                                               Foreground="#9CA3AF" 
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <Button x:Name="CloseButton" 
                        Content="âœ… Close" 
                        Style="{StaticResource PrimaryButton}" 
                        Click="CloseButton_Click"
                        HorizontalAlignment="Center"
                        IsDefault="True"/>
            </Border>
        </Grid>
    </Border>
</Window>
