<Window x:Class="DartTournamentPlaner.Views.RoundRulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Round Rules Configuration" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Name="TitleBlock" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        
        <!-- Main Content -->
        <TabControl Grid.Row="2" Name="RoundRulesTabControl">
            <!-- Winner Bracket Tab -->
            <TabItem Name="WinnerBracketTab" Header="Winner Bracket">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Winner Bracket Header -->
                        <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                            <TextBlock Name="WinnerBracketHeaderText" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Winner Bracket Rules Grid -->
                        <Grid Name="WinnerBracketGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Headers -->
                            <TextBlock Grid.Column="0" Text="Runde" FontWeight="Bold" Margin="5,10"/>
                            <TextBlock Grid.Column="1" Text="Sets" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            <TextBlock Grid.Column="2" Text="Legs" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            <TextBlock Grid.Column="3" Text="Legs/Set" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            
                            <!-- Dynamic content will be added here -->
                        </Grid>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Loser Bracket Tab -->
            <TabItem Name="LoserBracketTab" Header="Loser Bracket">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Loser Bracket Header -->
                        <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                            <TextBlock Name="LoserBracketHeaderText" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Loser Bracket Rules Grid -->
                        <Grid Name="LoserBracketGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Headers -->
                            <TextBlock Grid.Column="0" Text="Runde" FontWeight="Bold" Margin="5,10"/>
                            <TextBlock Grid.Column="1" Text="Sets" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            <TextBlock Grid.Column="2" Text="Legs" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            <TextBlock Grid.Column="3" Text="Legs/Set" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,10"/>
                            
                            <!-- Dynamic content will be added here -->
                        </Grid>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ResetToDefaultButton" Content="Reset to Default" Width="120" Click="ResetToDefaultButton_Click" Background="#FF9800"/>
            <Button Name="SaveButton" Content="Save" Width="80" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click" Background="#757575"/>
        </StackPanel>
    </Grid>
</Window>