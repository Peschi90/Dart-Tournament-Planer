<Window x:Class="DartTournamentPlaner.Views.License.LicenseStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lizenz-Status" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="450" MinWidth="550"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" 
                                      BlurRadius="20" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Badge Style -->
        <Style x:Key="FeatureBadge" TargetType="Border">
            <Setter Property="Background" Value="#F0F9FF"/>
            <Setter Property="BorderBrush" Value="#E0F2FE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="6,6"/>
        </Style>

        <!-- Action Button Styles -->
        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButton" TargetType="Button" BasedOn="{StaticResource PrimaryActionButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Background -->
    <Border Background="#F8FAFC">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="32,24">
                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="License Status" FontSize="32" FontWeight="Bold" 
                               Foreground="#1F2937" Margin="0,0,0,8"/>
                    <TextBlock x:Name="SubtitleText" Text="Overview of your current license status and available features" 
                               FontSize="16" Foreground="#6B7280"/>
                </StackPanel>
            </Border>

            <!-- Content ScrollViewer -->
            <ScrollViewer Grid.Row="1" Padding="32,24" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Status Overview Card -->
                    <Border Style="{StaticResource StatusCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Status Icon -->
                            <Border Grid.Column="0" x:Name="StatusIconBorder" Width="80" Height="80" 
                                    CornerRadius="40" Margin="0,0,24,0" VerticalAlignment="Top">
                                <TextBlock x:Name="StatusIcon" FontSize="32" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Status Information -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="StatusTitle" FontSize="24" FontWeight="Bold" 
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="StatusDescription" FontSize="14" 
                                           Foreground="#6B7280" TextWrapping="Wrap"
                                           Margin="0,0,0,12"/>
                                
                                <!-- Quick Info Grid -->
                                <Grid x:Name="QuickInfoGrid" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer:" 
                                               FontWeight="SemiBold" Foreground="#4B5563" Margin="0,4"/>
                                    <TextBlock x:Name="QuickCustomerText" Grid.Row="0" Grid.Column="1" 
                                               Margin="8,4"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Valid until:" 
                                               FontWeight="SemiBold" Foreground="#4B5563" Margin="0,4"/>
                                    <TextBlock x:Name="QuickExpiryText" Grid.Row="1" Grid.Column="1" 
                                               Margin="8,4"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Features:" 
                                               FontWeight="SemiBold" Foreground="#4B5563" Margin="0,4"/>
                                    <TextBlock x:Name="QuickFeaturesText" Grid.Row="2" Grid.Column="1" 
                                               Margin="8,4"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Action Button -->
                            <Button x:Name="PrimaryActionButton" Grid.Column="2" 
                                    Style="{StaticResource PrimaryActionButton}" 
                                    VerticalAlignment="Center"
                                    Click="PrimaryAction_Click"/>
                        </Grid>
                    </Border>

                    <!-- Available Features Card -->
                    <Border Style="{StaticResource StatusCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Available Features" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <WrapPanel x:Name="FeaturesPanel" Orientation="Horizontal">
                                <!-- Features werden dynamisch hinzugefuegt -->
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- System Information Card -->
                    <Border Style="{StaticResource StatusCardStyle}">
                        <StackPanel>
                            <TextBlock Text="System Information" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Hardware-ID:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Top" Margin="0,8"/>
                                <Border Grid.Row="0" Grid.Column="1" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="12,8">
                                    <TextBlock x:Name="SystemHardwareIdText" 
                                               FontFamily="Consolas" FontSize="11" 
                                               Foreground="#6B7280" TextWrapping="Wrap"/>
                                </Border>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Version:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="SystemVersionText" Grid.Row="1" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="12,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="32,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" 
                            Content="Refresh" 
                            Style="{StaticResource SecondaryActionButton}" 
                            Click="RefreshButton_Click"/>
                    
                    <Button x:Name="DetailsButton" 
                            Content="Show Details" 
                            Style="{StaticResource SecondaryActionButton}" 
                            Click="ShowDetailsButton_Click"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="Close" 
                            Style="{StaticResource PrimaryActionButton}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>