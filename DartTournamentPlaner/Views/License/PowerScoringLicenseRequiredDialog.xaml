<Window x:Class="DartTournamentPlaner.Views.License.PowerScoringLicenseRequiredDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerScoring License Required" Height="550" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Modern Gradient -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF3B82F6" Offset="0"/>
            <GradientStop Color="#FF2563EB" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource HeaderGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Target" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="PowerScoring License Required" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="32,24" HorizontalAlignment="Center">
                
                <!-- Main Message -->
                <TextBlock x:Name="MessageText"
                           Text="PowerScoring is a premium feature that helps you organize players based on their skill level."
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#374151"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,24"/>

                <!-- Feature Benefits -->
                <Border Background="#F0F9FF" 
                        BorderBrush="#3B82F6" 
                        BorderThickness="1" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock x:Name="BenefitsTitle"
                                   Text="PowerScoring includes:"
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#1E40AF" 
                                   Margin="0,0,0,12"/>
                        <TextBlock x:Name="BenefitsList"
                                   TextWrapping="Wrap" 
                                   FontSize="13" 
                                   Foreground="#1E40AF" 
                                   LineHeight="20">
                            <Run Text="- Systematic player score capture"/>
                            <LineBreak/>
                            <Run Text="- Automatic ranking creation"/>
                            <LineBreak/>
                            <Run Text="- Optimal group distribution based on skill level"/>
                            <LineBreak/>
                            <Run Text="- Flexible scoring rules (1x3, 8x3, 10x3, 15x3 throws)"/>
                            <LineBreak/>
                            <Run Text="- Snake-draft group assignment"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Action Message -->
                <TextBlock x:Name="ActionText"
                           Text="Would you like to request a license with the PowerScoring feature?"
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>

            </StackPanel>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CancelButton_Click"/>
                    
                    <Button x:Name="RequestLicenseButton" 
                            Content="Request License" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="RequestLicenseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
