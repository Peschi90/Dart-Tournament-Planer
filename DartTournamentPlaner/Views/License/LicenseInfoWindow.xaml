<Window x:Class="DartTournamentPlaner.Views.License.LicenseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lizenz-Informationen" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="700"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" 
                                      BlurRadius="12" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <!-- Feature Badge Style -->
        <Style x:Key="FeatureBadge" TargetType="Border">
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#DBEAFE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,4"/>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Background -->
    <Border Background="#F8FAFC">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="32,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="TitleText" Text="ðŸ”‘ Lizenz-Informationen" FontSize="28" FontWeight="Bold" 
                                   Foreground="#1F2937" Margin="0,0,0,8"/>
                        <TextBlock x:Name="SubtitleText" Text="Aktuelle Lizenz- und Feature-Informationen" 
                                   FontSize="16" Foreground="#6B7280"/>
                    </StackPanel>
                    
                    <!-- Status Badge -->
                    <Border x:Name="StatusBadge" Grid.Column="1" Style="{StaticResource StatusBadge}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="StatusIcon" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Content ScrollViewer -->
            <ScrollViewer Grid.Row="1" Padding="32" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- License Status Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Lizenz-Status" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="LicenseStatusText" Grid.Row="0" Grid.Column="1" 
                                           FontWeight="Medium" FontSize="14" VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lizenz-Typ:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="LicenseTypeText" Grid.Row="1" Grid.Column="1" 
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Gueltig bis:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="ExpiryDateText" Grid.Row="2" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Letzte PrÃ¼fung:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="LastValidationText" Grid.Row="3" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- License Details Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“„ Lizenz-Details" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Kunde:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="CustomerNameText" Grid.Row="0" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Produkt:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="ProductNameText" Grid.Row="1" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="LizenzschlÃ¼ssel:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Top" Margin="0,8"/>
                                <Border Grid.Row="2" Grid.Column="1" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="16,8">
                                    <TextBlock x:Name="LicenseKeyText" 
                                               FontFamily="Consolas" FontSize="12" 
                                               Foreground="#6B7280" TextWrapping="Wrap"/>
                                </Border>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Aktivierungen:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="ActivationsText" Grid.Row="3" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Server-Version:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="ServerVersionText" Grid.Row="4" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Features Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸš€ VerfÃ¼gbare Features" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <WrapPanel x:Name="FeaturesPanel" Orientation="Horizontal">
                                <!-- Features werden dynamisch hinzugefÃ¼gt -->
                            </WrapPanel>
                            
                            <TextBlock x:Name="NoFeaturesText" 
                                       Text="Alle Core-Features sind verfÃ¼gbar" 
                                       FontSize="14" FontStyle="Italic"
                                       Foreground="#6B7280" 
                                       Visibility="Collapsed"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- System Info Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ–¥ï¸ System-Information" FontSize="20" FontWeight="Bold" 
                                       Foreground="#374151" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Hardware-ID:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Top" Margin="0,8"/>
                                <Border Grid.Row="0" Grid.Column="1" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="16,8">
                                    <TextBlock x:Name="HardwareIdText" 
                                               FontFamily="Consolas" FontSize="11" 
                                               Foreground="#6B7280" TextWrapping="Wrap"/>
                                </Border>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Client-Version:" FontWeight="SemiBold" 
                                           Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                <TextBlock x:Name="ClientVersionText" Grid.Row="1" Grid.Column="1" 
                                           VerticalAlignment="Center" Margin="16,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="32,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" 
                            Content="ðŸ”„ Aktualisieren" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="RefreshButton_Click"/>
                    
                    <Button x:Name="RemoveLicenseButton" 
                            Content="ðŸ—‘ï¸ Lizenz entfernen" 
                            Style="{StaticResource DangerButton}" 
                            Click="RemoveLicenseButton_Click"
                            Visibility="Collapsed"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="SchlieÃŸen" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>