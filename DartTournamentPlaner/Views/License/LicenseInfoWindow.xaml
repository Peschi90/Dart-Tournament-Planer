<Window x:Class="DartTournamentPlaner.Views.License.LicenseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Information" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinHeight="700" MinWidth="800"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Modern Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="16" 
                          Opacity="0.08"/>

        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <!-- Modern Gradient Backgrounds -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                      BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Badge Style -->
        <Style x:Key="FeatureBadge" TargetType="Border">
            <Setter Property="Background" Value="#E0F2FE"/>
            <Setter Property="BorderBrush" Value="#BAE6FD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#67E8F9" Direction="0" ShadowDepth="0" 
                                      BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogPrimaryGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DialogInfoGradient}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#67E8F9" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8FAFC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource DialogErrorGradient}"/>
        </Style>
    </Window.Resources>

    <!-- Main container with modern design -->
    <Border Background="{DynamicResource MainBackgroundBrush}" 
            CornerRadius="16" 
            Effect="{StaticResource HeaderShadow}"
            Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with modern gradient design -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource DialogSuccessGradient}" 
                    CornerRadius="16,16,0,0" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,0,1" 
                    Padding="32,24"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown"
                    Effect="{StaticResource HeaderShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="TitleText" Text="ðŸ”‘ License Information" 
                                   FontSize="28" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="SubtitleText" Text="Current license and feature information" 
                                   FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                    
                    <!-- Status Badge -->
                    <Border x:Name="StatusBadge" Grid.Column="1" Style="{StaticResource StatusBadge}" VerticalAlignment="Center" MinHeight="36">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="StatusIcon" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                     </Border>
                 </Grid>
             </Border>

            <!-- Content ScrollViewer with white background -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Margin="0">
                <ScrollViewer Padding="32" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- License Status Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š License Status" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="LicenseStatusText" Grid.Row="0" Grid.Column="1" 
                                               FontWeight="Medium" FontSize="14" VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="License Type:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="LicenseTypeText" Grid.Row="1" Grid.Column="1" 
                                               FontWeight="Medium" VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Valid until:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="ExpiryDateText" Grid.Row="2" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Last validation:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="LastValidationText" Grid.Row="3" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- License Details Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ“„ License Details" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="CustomerNameText" Grid.Row="0" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Product:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="ProductNameText" Grid.Row="1" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="License Key:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Top" Margin="0,8"/>
                                    <Border Grid.Row="2" Grid.Column="1" 
                                            Background="#F9FAFB" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1" 
                                            CornerRadius="6" 
                                            Padding="12,8" 
                                            Margin="16,8">
                                        <TextBlock x:Name="LicenseKeyText" 
                                                   FontFamily="Consolas" FontSize="12" 
                                                   Foreground="#6B7280" TextWrapping="Wrap"/>
                                    </Border>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Activations:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="ActivationsText" Grid.Row="3" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Server Version:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="ServerVersionText" Grid.Row="4" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Features Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸš€ Available Features" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
                                
                                <WrapPanel x:Name="FeaturesPanel" Orientation="Horizontal">
                                    <!-- Features are added dynamically -->
                                </WrapPanel>
                                
                                <TextBlock x:Name="NoFeaturesText" 
                                           Text="All core features are available" 
                                           FontSize="14" FontStyle="Italic"
                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                           Visibility="Collapsed"
                                           Margin="0,12,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- System Info Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="ðŸ–¥ï¸ System Information" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Hardware ID:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Top" Margin="0,8"/>
                                    <Border Grid.Row="0" Grid.Column="1" 
                                            Background="#F9FAFB" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1" 
                                            CornerRadius="6" 
                                            Padding="12,8" 
                                            Margin="16,8">
                                        <TextBlock x:Name="HardwareIdText" 
                                                   FontFamily="Consolas" FontSize="11" 
                                                   Foreground="#6B7280" TextWrapping="Wrap"/>
                                    </Border>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Client Version:" FontWeight="SemiBold" 
                                               Foreground="#4B5563" VerticalAlignment="Center" Margin="0,8"/>
                                    <TextBlock x:Name="ClientVersionText" Grid.Row="1" Grid.Column="1" 
                                               VerticalAlignment="Center" Margin="16,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="0,0,16,16"
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    Padding="32,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" 
                            Content="ðŸ”„ Refresh" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="RefreshButton_Click"/>
                    
                    <Button x:Name="RemoveLicenseButton" 
                            Content="ðŸ—‘ï¸ Remove License" 
                            Style="{StaticResource DangerButton}" 
                            Click="RemoveLicenseButton_Click"
                            Visibility="Collapsed"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="Close" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>