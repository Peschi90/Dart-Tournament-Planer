<Window x:Class="DartTournamentPlaner.Views.License.EmailSuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Erfolg" Height="420" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Success Gradient -->
        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                                  BlurRadius="8" Opacity="0.08"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource DialogSuccessGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TitleText" 
                               Text="E-Mail erfolgreich versendet!" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Padding="40,30">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="âœ‰ï¸ Sie erhalten eine Kopie an Ihre E-Mail-Adresse" 
                                   FontSize="15" 
                                   Foreground="#374151"
                                   TextAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="â±ï¸ Unser Support-Team meldet sich innerhalb von 24 Stunden" 
                                   FontSize="15" 
                                   Foreground="#374151"
                                   TextAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="ðŸŽ¯ Vielen Dank fÃ¼r Ihr Interesse!" 
                                   FontSize="15" 
                                   Foreground="#374151"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Footer with Button -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,16,16" 
                    Padding="30,20">
                <Button x:Name="OkButton" 
                        Content="OK" 
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Center"
                        MinWidth="150"
                        Click="OkButton_Click" Background="{DynamicResource SuccessBrush}" Foreground="{DynamicResource TextBrush}"/>
            </Border>
        </Grid>
    </Border>
</Window>
