<Window x:Class="DartTournamentPlaner.Views.License.EmailErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fehler" Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Error Gradient -->
        <LinearGradientBrush x:Key="ErrorGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#DC2626" Offset="1"/>
        </LinearGradientBrush>

        <!-- Warning Gradient -->
        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="1"/>
        </LinearGradientBrush>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource WarningGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                                  BlurRadius="8" Opacity="0.08"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#F59E0B" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                                  BlurRadius="8" Opacity="0.08"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#9CA3AF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#6B7280" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="12" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    x:Name="HeaderBorder"
                    Background="{StaticResource WarningGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="30,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="IconText" Text="âš ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Automatischer Versand fehlgeschlagen" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Padding="40,30">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="MessageText" 
                                   Text="Die E-Mail konnte nicht automatisch versendet werden." 
                                   FontSize="16" 
                                   Foreground="#374151" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Error Details (Optional) -->
                        <Border x:Name="ErrorDetailsPanel"
                                Background="#FEF2F2" 
                                BorderBrush="#FCA5A5" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="ðŸ” Fehlerdetails:" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Foreground="#991B1B"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="ErrorDetailsText" 
                                           Text="" 
                                           FontSize="13" 
                                           Foreground="#7F1D1D"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="ðŸ’¡ MÃ¶chten Sie Ihren E-Mail-Client Ã¶ffnen, um die Anfrage manuell zu versenden?" 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Footer with Buttons -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,16,16" 
                    Padding="30,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="NoButton" 
                            Content="Abbrechen" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="150"
                            Click="NoButton_Click"/>
                    <Button x:Name="YesButton" 
                            Content="E-Mail-Client Ã¶ffnen" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="200"
                            Click="YesButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
