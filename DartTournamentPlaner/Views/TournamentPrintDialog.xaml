<Window x:Class="DartTournamentPlaner.Views.TournamentPrintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Turnierstatistiken drucken" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800"
        Icon="../Assets/Images/favicon.ico">
    
    <Window.Resources>
        <!-- Moderne Gradient-Hintergruende -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Moderne Schatten-Effekte -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.1"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1D4ED8" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="#F8FAFC" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Modern GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Effect="{TemplateBinding Effect}">
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <ContentPresenter Grid.Row="0"
                                                      ContentSource="Header"
                                                      Margin="0,0,0,10"/>
                                    <ContentPresenter Grid.Row="1"
                                                      ContentSource="Content"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Hauptinhalt mit modernem Gradient-Hintergrund -->
    <Border Background="{StaticResource MainBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,15"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="&#x1F4C4; Turnierstatistiken drucken" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#1E40AF"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Turnierklassen-Auswahl -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10">
                        <TextBlock Text="🏆 Turnierklasse:" 
                                   VerticalAlignment="Center" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <ComboBox x:Name="TournamentClassComboBox"
                                  MinWidth="200"
                                  FontSize="14"
                                  Padding="8,5"
                                  SelectionChanged="TournamentClassComboBox_SelectionChanged"
                                  Background="White"
                                  BorderBrush="#D1D5DB"
                                  BorderThickness="2"/>
                    </StackPanel>

                    <TextBlock x:Name="TournamentClassLabel" 
                               Text="Turnierklasse: -" 
                               FontSize="14" 
                               Foreground="#374151"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Haupt-Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Linke Spalte - Druckoptionen -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Allgemeine Optionen -->
                        <GroupBox Header="&#x1F527; Allgemeine Optionen">
                            <StackPanel>
                                <CheckBox x:Name="IncludeOverviewCheckBox" 
                                          Content="Turnier&#xFC;bersicht" 
                                          IsChecked="True"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="&#x1F4CB; Titel (optional):" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"/>
                                    <TextBox x:Name="TitleTextBox" 
                                             Width="200" 
                                             Padding="8,5"
                                             BorderBrush="#D1D5DB"
                                             BorderThickness="1"
                                             Background="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="&#x1F4DD; Untertitel (optional):" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"/>
                                    <TextBox x:Name="SubtitleTextBox" 
                                             Width="200" 
                                             Padding="8,5"
                                             BorderBrush="#D1D5DB"
                                             BorderThickness="1"
                                             Background="White"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Gruppenphase -->
                        <GroupBox Header="&#x1F465; Gruppenphase">
                            <StackPanel>
                                <CheckBox x:Name="IncludeGroupPhaseCheckBox" 
                                          Content="Gruppenphase einschlie&#xDF;en" 
                                          IsChecked="True"
                                          Checked="IncludeGroupPhaseCheckBox_Checked"
                                          Unchecked="IncludeGroupPhaseCheckBox_Unchecked"/>

                                <StackPanel x:Name="GroupSelectionPanel" Margin="20,10,0,0">
                                    <TextBlock Text="Gruppen ausw&#xE4;hlen:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>

                                    <CheckBox x:Name="SelectAllGroupsCheckBox" 
                                              Content="Alle Gruppen" 
                                              IsChecked="True"
                                              FontWeight="Medium"
                                              Foreground="#059669"
                                              Checked="SelectAllGroupsCheckBox_Checked"
                                              Unchecked="SelectAllGroupsCheckBox_Unchecked"/>

                                    <StackPanel x:Name="IndividualGroupsPanel" 
                                                Margin="20,5,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Finalrunde -->
                        <GroupBox Header="&#x1F3C6; Finalrunde">
                            <CheckBox x:Name="IncludeFinalsCheckBox" 
                                      Content="Finalrunde einschlie&#xDF;en" 
                                      IsChecked="True"/>
                        </GroupBox>

                        <!-- KO-Phase -->
                        <GroupBox Header="&#x2694;&#xFE0F; KO-Phase">
                            <StackPanel>
                                <CheckBox x:Name="IncludeKnockoutCheckBox" 
                                          Content="KO-Phase einschlie&#xDF;en" 
                                          IsChecked="True"
                                          Checked="IncludeKnockoutCheckBox_Checked"
                                          Unchecked="IncludeKnockoutCheckBox_Unchecked"/>

                                <StackPanel x:Name="KnockoutDetailsPanel" Margin="20,10,0,0">
                                    <CheckBox x:Name="IncludeWinnerBracketCheckBox" 
                                              Content="Winner Bracket" 
                                              IsChecked="True"/>
                                    <CheckBox x:Name="IncludeLoserBracketCheckBox" 
                                              Content="Loser Bracket" 
                                              IsChecked="True"/>
                                    <CheckBox x:Name="IncludeKnockoutParticipantsCheckBox" 
                                              Content="Teilnehmer-Liste" 
                                              IsChecked="True"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Rechte Spalte - Vorschau -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Margin="10,0,0,0"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="&#x1F441;&#xFE0F; Vorschau" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#1E40AF"
                                   HorizontalAlignment="Center"
                                   Margin="15"/>

                        <Border Grid.Row="1" 
                                Background="#F8FAFC" 
                                CornerRadius="4"
                                Margin="15,0,15,15">
                            <ScrollViewer x:Name="PreviewScrollViewer" 
                                          Background="White"
                                          Padding="10">
                                <StackPanel x:Name="PreviewPanel">
                                    <TextBlock Text="&#x1F4C4; Vorschau wird hier angezeigt..." 
                                               FontStyle="Italic" 
                                               Foreground="#6B7280"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="20"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Button-Bereich -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,15,0,0"
                    Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="PreviewButton"
                            Content="&#x1F441;&#xFE0F; Vorschau aktualisieren"
                            Style="{StaticResource SecondaryButton}"
                            Click="PreviewButton_Click"
                            Width="180"/>
                    <Button x:Name="PrintButton"
                            Content="&#x1F5A8;&#xFE0F; Drucken"
                            Style="{StaticResource ModernButton}"
                            Click="PrintButton_Click"
                            Width="120"/>
                    <Button x:Name="CancelButton"
                            Content="&#x274C; Abbrechen"
                            Style="{StaticResource SecondaryButton}"
                            Click="CancelButton_Click"
                            Width="120"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>