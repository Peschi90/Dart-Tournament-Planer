<Window x:Class="DartTournamentPlaner.Views.TournamentPrintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Print Tournament Statistics" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="Black" Direction="270" ShadowDepth="4" BlurRadius="16" Opacity="0.1"/>
        <DropShadowEffect x:Key="HeaderShadow" Color="Black" Direction="270" ShadowDepth="2" BlurRadius="12" Opacity="0.1"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogPrimaryGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DialogInfoGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}" Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MainBackgroundBrush}" CornerRadius="16" Effect="{StaticResource HeaderShadow}" Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource DialogInfoGradient}"
                    CornerRadius="16,16,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,16">
                <StackPanel>
                    <TextBlock x:Name="HeaderTitle"
                               Text="📄 Print Tournament Statistics"
                               FontSize="22"
                               FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,6" VerticalAlignment="Center">
                        <TextBlock x:Name="TournamentClassText"
                                   Text="🏆 Tournament Class:" 
                                   VerticalAlignment="Center" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <ComboBox x:Name="TournamentClassComboBox"
                                  MinWidth="220"
                                  FontSize="14"
                                  Padding="8,5"
                                  SelectionChanged="TournamentClassComboBox_SelectionChanged"
                                  Background="{DynamicResource SurfaceBrush}"
                                  BorderBrush="{DynamicResource BorderBrush}"
                                  BorderThickness="1"/>
                    </StackPanel>

                    <TextBlock x:Name="TournamentClassLabel"
                               Text="Tournament Class: -"
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}">
                <ScrollViewer Padding="18" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left options -->
                        <StackPanel Grid.Column="0">
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔧 General Options" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <CheckBox x:Name="IncludeOverviewCheckBox" Content="Tournament Overview" IsChecked="True" Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock x:Name="TitleLabel" Text="📋 Title (optional):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBox x:Name="TitleTextBox" Width="200" Padding="8,5"
                                                 BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                                 Background="{DynamicResource SurfaceBrush}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock x:Name="SubtitleLabel" Text="📝 Subtitle (optional):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBox x:Name="SubtitleTextBox" Width="200" Padding="8,5"
                                                 BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                                 Background="{DynamicResource SurfaceBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="👥 Group Phase" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <CheckBox x:Name="IncludeGroupPhaseCheckBox" Content="Include Group Phase" IsChecked="True"
                                              Checked="IncludeGroupPhaseCheckBox_Checked" Unchecked="IncludeGroupPhaseCheckBox_Unchecked"/>

                                    <StackPanel x:Name="GroupSelectionPanel" Margin="20,8,0,0">
                                        <TextBlock x:Name="SelectGroupsLabel" Text="Select Groups:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <CheckBox x:Name="SelectAllGroupsCheckBox" Content="All Groups" IsChecked="True" FontWeight="Medium" Foreground="#059669"
                                                  Checked="SelectAllGroupsCheckBox_Checked" Unchecked="SelectAllGroupsCheckBox_Unchecked"/>
                                        <StackPanel x:Name="IndividualGroupsPanel" Margin="20,5,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🏆 Finals" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <CheckBox x:Name="IncludeFinalsCheckBox" Content="Include Finals" IsChecked="True"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="⚔️ KO Phase" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <CheckBox x:Name="IncludeKnockoutCheckBox" Content="Include KO Phase" IsChecked="True"
                                              Checked="IncludeKnockoutCheckBox_Checked" Unchecked="IncludeKnockoutCheckBox_Unchecked"/>
                                    <StackPanel x:Name="KnockoutDetailsPanel" Margin="20,8,0,0">
                                        <CheckBox x:Name="IncludeWinnerBracketCheckBox" Content="Winner Bracket" IsChecked="True"/>
                                        <CheckBox x:Name="IncludeLoserBracketCheckBox" Content="Loser Bracket" IsChecked="True"/>
                                        <CheckBox x:Name="IncludeKnockoutParticipantsCheckBox" Content="Participants List" IsChecked="True"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right preview -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <Border Style="{StaticResource CardStyle}" Padding="12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock x:Name="PreviewHeader" Text="👁️ Preview" FontSize="18" FontWeight="Bold"
                                               Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                    <Border Grid.Row="1" Background="{DynamicResource BackgroundBrush}" CornerRadius="6" Padding="8">
                                        <ScrollViewer x:Name="PreviewScrollViewer" Background="Transparent" Padding="4">
                                            <StackPanel x:Name="PreviewPanel">
                                                <TextBlock x:Name="PreviewPlaceholderText" Text="📄 Preview will be displayed here..."
                                                           FontStyle="Italic" Foreground="{DynamicResource SecondaryTextBrush}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="0,0,16,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="PreviewButton" Content="👁️ Update Preview" Style="{StaticResource SecondaryButton}" Click="PreviewButton_Click" Width="180"/>
                    <Button x:Name="PrintButton" Content="🖨️ Print" Style="{StaticResource PrimaryButton}" Click="PrintButton_Click" Width="140"/>
                    <Button x:Name="CancelButton" Content="❌ Cancel" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click" Width="140"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>