<Window x:Class="DartTournamentPlaner.Views.HubRegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Mit Hub registrieren"
     Width="500" Height="420"
     WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{DynamicResource BackgroundBrush}"
         BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
     CornerRadius="12">
        <Border.Effect>
      <DropShadowEffect Color="Black" Direction="315" ShadowDepth="8" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

     <Grid Margin="30">
            <Grid.RowDefinitions>
       <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

            <!-- Header -->
    <StackPanel Grid.Row="0" Margin="0,0,0,20">
     <TextBlock x:Name="HeaderTitle"
         Text="ðŸ”— Mit Hub registrieren"
     FontSize="24"
    FontWeight="Bold"
    Foreground="{DynamicResource TextBrush}"
  HorizontalAlignment="Center"
     Margin="0,0,0,10"/>
<TextBlock x:Name="HeaderSubtitle"
     Text="Registrieren Sie Ihr Turnier fuer Live-Scoring"
   FontSize="13"
   Foreground="{DynamicResource SecondaryTextBrush}"
    TextWrapping="Wrap"
         TextAlignment="Center"/>
  </StackPanel>

<!-- Content -->
      <StackPanel Grid.Row="1">
         <!-- Tournament-ID Input -->
   <TextBlock x:Name="TournamentIdLabel"
          Text="Tournament-ID (optional):"
FontSize="14"
FontWeight="SemiBold"
 Foreground="{DynamicResource TextBrush}"
     Margin="0,0,0,8"/>

        <Grid Margin="0,0,0,15">
         <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

<!-- Input for custom ID -->
 <TextBox x:Name="TournamentIdTextBox"
        Grid.Column="0"
   Height="40"
    Padding="12,0"
        FontSize="13"
 Background="{DynamicResource SurfaceBrush}"
  Foreground="{DynamicResource TextBrush}"
  BorderBrush="{DynamicResource BorderBrush}"
   BorderThickness="2"
          VerticalContentAlignment="Center"
      Margin="0,0,10,0"
    ToolTip="Leer lassen fuer automatische ID-Generierung"/>

       <!-- Button to generate new ID -->
<Button x:Name="GenerateIdButton"
      Grid.Column="1"
Content="ðŸ”„"
     Height="40"
      Width="40"
   FontSize="18"
    Background="{DynamicResource SurfaceBrush}"
         Foreground="{DynamicResource TextBrush}"
  BorderBrush="{DynamicResource BorderBrush}"
    BorderThickness="2"
    Cursor="Hand"
       ToolTip="Neue ID generieren"
    Click="GenerateNewId_Click">
    <Button.Style>
         <Style TargetType="Button">
      <Setter Property="Template">
         <Setter.Value>
           <ControlTemplate TargetType="Button">
         <Border Background="{TemplateBinding Background}"
   BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
    CornerRadius="8">
        <ContentPresenter HorizontalAlignment="Center"
      VerticalAlignment="Center"/>
     </Border>
          </ControlTemplate>
</Setter.Value>
     </Setter>
       <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
             <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
 <Setter Property="Foreground" Value="White"/>
         </Trigger>
        </Style.Triggers>
        </Style>
      </Button.Style>
</Button>
    </Grid>

    <!-- Info-Text -->
        <Border Background="{DynamicResource SurfaceBrush}"
         BorderBrush="{DynamicResource BorderBrush}"
 BorderThickness="1"
        CornerRadius="8"
    Padding="15"
          Margin="0,0,0,10">
           <StackPanel>
        <TextBlock x:Name="TipTextBlock"
           FontSize="12"
              Foreground="{DynamicResource SecondaryTextBrush}"
         TextWrapping="Wrap">
  <Run Text="ðŸ’¡ " FontWeight="Bold"/>
<Run Text="Tipp: "/>
    <Run Text="Lassen Sie das Feld leer fuer automatische ID-Generierung."/>
   </TextBlock>
   <TextBlock x:Name="NoteTextBlock"
        FontSize="12"
        Foreground="{DynamicResource SecondaryTextBrush}"
         TextWrapping="Wrap"
     Margin="0,5,0,0">
<Run Text="ðŸ“Œ " FontWeight="Bold"/>
    <Run Text="Verwenden Sie eine bekannte ID um ein bestehendes Turnier fortzusetzen."/>
</TextBlock>
     </StackPanel>
         </Border>
    </StackPanel>

          <!-- Buttons -->
     <StackPanel Grid.Row="2"
           Orientation="Horizontal"
              HorizontalAlignment="Right"
      Margin="0,20,0,0">
     <Button x:Name="CancelButton"
   Content="Abbrechen"
            Width="120"
        Height="40"
           Margin="0,0,10,0"
   Background="{DynamicResource SurfaceBrush}"
     Foreground="{DynamicResource TextBrush}"
       BorderBrush="{DynamicResource BorderBrush}"
 BorderThickness="2"
       FontSize="14"
      FontWeight="SemiBold"
    Cursor="Hand"
             Click="Cancel_Click">
    <Button.Style>
 <Style TargetType="Button">
          <Setter Property="Template">
        <Setter.Value>
    <ControlTemplate TargetType="Button">
   <Border Background="{TemplateBinding Background}"
       BorderBrush="{TemplateBinding BorderBrush}"
         BorderThickness="{TemplateBinding BorderThickness}"
          CornerRadius="8">
          <ContentPresenter HorizontalAlignment="Center"
         VerticalAlignment="Center"/>
  </Border>
        </ControlTemplate>
         </Setter.Value>
         </Setter>
 <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
         <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
          </Trigger>
           </Style.Triggers>
           </Style>
           </Button.Style>
    </Button>

          <Button x:Name="RegisterButton"
             Content="Registrieren"
       Width="140"
      Height="40"
         Background="{DynamicResource AccentBrush}"
       Foreground="White"
    BorderThickness="0"
       FontSize="14"
             FontWeight="Bold"
          Cursor="Hand"
              Click="Register_Click">
          <Button.Style>
         <Style TargetType="Button">
        <Setter Property="Template">
   <Setter.Value>
    <ControlTemplate TargetType="Button">
               <Border Background="{TemplateBinding Background}"
  BorderBrush="{TemplateBinding BorderBrush}"
        BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="8">
  <ContentPresenter HorizontalAlignment="Center"
  VerticalAlignment="Center"/>
     </Border>
  </ControlTemplate>
     </Setter.Value>
                </Setter>
         <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
           <Setter Property="Opacity" Value="0.9"/>
             </Trigger>
     </Style.Triggers>
     </Style>
  </Button.Style>
     </Button>
          </StackPanel>
        </Grid>
    </Border>
</Window>
