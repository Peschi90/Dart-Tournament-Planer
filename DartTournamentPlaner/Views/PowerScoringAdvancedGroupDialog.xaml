<Window x:Class="DartTournamentPlaner.Views.PowerScoringAdvancedGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Group Distribution"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderGradient}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="HeaderTitleText"
                           Text="Advanced Group Distribution"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"/>
                <TextBlock x:Name="HeaderDescriptionText"
                           Text="Configure classes, groups, and players per group"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Configuration Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Class Selection -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock x:Name="SelectClassesLabel"
                               Text="Select Classes:"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <ItemsControl x:Name="ClassCheckBoxes">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected}"
                                          Margin="0,0,20,5"
                                          FontSize="13"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Groups per Class -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock x:Name="GroupsPerClassLabel"
                               Text="Groups per Class:
                               " FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="GroupsPerClassComboBox"
                              SelectionChanged="ConfigChanged"
                              SelectedIndex="0">
                        <ComboBoxItem Content="1 Group"/>
                        <ComboBoxItem Content="2 Groups"/>
                        <ComboBoxItem Content="3 Groups"/>
                        <ComboBoxItem Content="4 Groups"/>
                    </ComboBox>
                </StackPanel>

                <!-- Players per Group -->
                <StackPanel Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="PlayersPerGroupLabel"
                                       Text="Players per Group:"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="PlayersPerGroupComboBox"
                                      SelectionChanged="ConfigChanged"
                                      SelectedIndex="2">
                                <ComboBoxItem Content="2 Players"/>
                                <ComboBoxItem Content="3 Players"/>
                                <ComboBoxItem Content="4 Players"/>
                                <ComboBoxItem Content="5 Players"/>
                                <ComboBoxItem Content="6 Players"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- âœ… NEU: Advanced Settings Button -->
                        <Button Grid.Column="1"
                                x:Name="AdvancedSettingsButton"
                                Content="âš™ï¸ Advanced"
                                Style="{StaticResource ModernButton}"
                                Click="AdvancedSettingsButton_Click"
                                VerticalAlignment="Bottom"
                                Margin="10,0,0,0"
                                ToolTip="Open advanced distribution settings"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results Display -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           x:Name="DistributionPreviewLabel"
                           Text="Distribution Preview:"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="GroupsDisplay">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding GroupName}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   Margin="0,0,0,10"/>
                                        
                                        <ItemsControl ItemsSource="{Binding Players}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Margin="10,2">
                                                        <Run Text="- "/>
                                                        <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                                        <Run Text=" - Avg: "/>
                                                        <Run Text="{Binding AverageScore, StringFormat=F2}"/>
                                                        <Run Text=" (Total: "/>
                                                        <Run Text="{Binding TotalScore}"/>
                                                        <Run Text=")"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="GenerateButton"
                    Content="Generate Distribution"
                    Style="{StaticResource ModernButton}"
                    Click="GenerateButton_Click"/>
            <Button x:Name="CopyButton"
                    Content="Copy to Clipboard"
                    Style="{StaticResource ModernButton}"
                    Click="CopyButton_Click"/>
            
            <!-- âœ… NEU: Create Tournament Button -->
            <Button x:Name="CreateTournamentButton"
                    Content="ðŸ† Create Tournament"
                    Style="{StaticResource ModernButton}"
                    Click="CreateTournamentButton_Click"
                    ToolTip="Create a new tournament based on this distribution"
                    Visibility="Collapsed"/>
            
            <Button x:Name="CloseButton"
                    Content="Close"
                    Style="{StaticResource ModernButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
