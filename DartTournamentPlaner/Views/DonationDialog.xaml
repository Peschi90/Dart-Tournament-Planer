<Window x:Class="DartTournamentPlaner.Views.DonationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Support Development" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DonationButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#EF6C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="💝" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Name="TitleTextBlock" Text="Support Development" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#FF9800" HorizontalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Padding="20">
            <StackPanel>
                <TextBlock Name="MessageTextBlock"
                           Text="Do you like this Dart Tournament Planner?&#x0a;&#x0a;Support further development with a small donation.&#x0a;Every contribution helps improve and maintain the software."
                           FontSize="14"
                           TextWrapping="Wrap"
                           LineHeight="20"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <Border Background="#F0F8FF" 
                        CornerRadius="6" 
                        Padding="15" 
                        Margin="0,20,0,0"
                        BorderBrush="#2196F3" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="With your support you enable:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"
                                   Foreground="#1976D2"/>
                        <StackPanel>
                            <TextBlock Text="- Regular updates and new features" Margin="0,2"/>
                            <TextBlock Text="- Fast bug fixes" Margin="0,2"/>
                            <TextBlock Text="- Continuous support" Margin="0,2"/>
                            <TextBlock Text="- Free use for everyone" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="DonateButton" Style="{StaticResource DonationButton}" 
                    Content="Open Donation Page" Click="DonateButton_Click" MinWidth="150"/>
            <Button Name="CloseButton" Style="{StaticResource CancelButton}" 
                    Content="Later" Click="CloseButton_Click" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>