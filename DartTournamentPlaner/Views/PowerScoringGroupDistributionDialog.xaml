<Window x:Class="DartTournamentPlaner.Views.PowerScoringGroupDistributionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gruppeneinteilung"
        Height="650" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderGradient}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Group Distribution"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"/>
                <TextBlock Text="Distribute players to groups based on their scores"
                           FontSize="13"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Anzahl Gruppen -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Anzahl Gruppen:"
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="GroupCountComboBox"
                          Width="100"
                          SelectedIndex="3"
                          SelectionChanged="GroupCountComboBox_SelectionChanged">
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="8"/>
                </ComboBox>
                <Button Content="Redistribute"
                        Style="{StaticResource ModernButton}"
                        Click="RedistributeButton_Click"
                        Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Gruppen-Anzeige -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="GroupsDisplay">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15"
                                Margin="5"
                                Width="220"
                                Effect="{StaticResource CardShadow}">
                            <StackPanel>
                                <TextBlock Text="{Binding GroupName}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource AccentBrush}"
                                           Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding Players}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource BackgroundBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Name}"
                                                               FontSize="12"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               VerticalAlignment="Center">
                                                        <Run Text="Avg "/>
                                                        <Run Text="{Binding AverageScore, StringFormat=F1}"/>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Copy to Clipboard"
                    Style="{StaticResource ModernButton}"
                    Click="CopyButton_Click"
                    ToolTip="Copy group distribution to clipboard"/>
            <Button Content="OK"
                    Style="{StaticResource ModernButton}"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
