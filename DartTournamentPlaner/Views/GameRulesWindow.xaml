<Window x:Class="DartTournamentPlaner.Views.GameRulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spielregeln" Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    <Window.Resources>
        <!-- Moderne Button-Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0EA5E9" Offset="0"/>
                        <GradientStop Color="#0284C7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Moderne ComboBox, CheckBox und TextBox Styles -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton Name="toggleButton" 
                                              Background="Transparent" 
                                              BorderThickness="0"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Name="contentPresenter" 
                                                          Grid.Column="0"
                                                          Margin="{TemplateBinding Padding}"
                                                          HorizontalAlignment="Left" 
                                                          VerticalAlignment="Center"
                                                          Content="{TemplateBinding SelectionBoxItem}"/>
                                        <Path Grid.Column="1" Name="arrow" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z" 
                                              Fill="#6B7280"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup Name="popup" 
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True" 
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="White" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1" 
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" 
                                                              BlurRadius="12" Opacity="0.15"/>
                                        </Border.Effect>
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border Name="checkBorder" 
                                    Width="20" Height="20" 
                                    Background="White" 
                                    BorderBrush="#CBD5E1" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <Path Name="checkMark" 
                                      Data="M 2 6 L 6 10 L 14 2" 
                                      Stroke="#3B82F6" 
                                      StrokeThickness="2" 
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="Background" Value="#EFF6FF"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="2">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3B82F6" BlurRadius="8" 
                                                          Direction="0" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Hauptcontainer mit modernem Design -->
    <Border Background="Transparent" Margin="10">
        <Border Background="{x:Static SystemColors.WindowBrush}" 
                CornerRadius="12" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" 
                                  BlurRadius="20" Opacity="0.15"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header mit Gradient -->
                <Border Grid.Row="0" CornerRadius="12,12,0,0" 
                        Padding="24,18,24,18" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#F59E0B" Offset="0"/>
                            <GradientStop Color="#D97706" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F3AF;" FontSize="20" Margin="0,0,12,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="TitleBlock" Text="Spielregeln" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,24,24,0">
                    <StackPanel>
                        <!-- Basic Game Rules -->
                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                BorderThickness="1" CornerRadius="12" 
                                Padding="20" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="&#x1F3AE;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Grundregeln" FontWeight="SemiBold" FontSize="15" 
                                               Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Name="GameModeLabel" Text="Spielmodus:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Name="GameModeComboBox" 
                                          Margin="8,0,0,0" SelectionChanged="GameModeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="&#x1F3AF; 501 Punkte" Tag="Points501"/>
                                    <ComboBoxItem Content="&#x1F3AF; 401 Punkte" Tag="Points401"/>
                                    <ComboBoxItem Content="&#x1F3AF; 301 Punkte" Tag="Points301"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Name="FinishModeLabel" Text="Finish-Modus:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Name="FinishModeComboBox" 
                                          Margin="8,0,0,0" SelectionChanged="FinishModeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="&#x26AB; Single Out" Tag="SingleOut"/>
                                    <ComboBoxItem Content="&#x1F3AF; Double Out" Tag="DoubleOut"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Name="LegsToWinLabel" Text="Legs zum Sieg:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Name="LegsToWinTextBox" 
                                         Width="80" HorizontalAlignment="Left" Margin="8,0,0,0"
                                         TextChanged="LegsToWinTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                        
                        <!-- Sets Configuration -->
                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                BorderThickness="1" CornerRadius="12" 
                                Padding="20" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="&#x1F4CA;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Set-Konfiguration" FontWeight="SemiBold" FontSize="15" 
                                               Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Name="PlayWithSetsLabel" Text="Mit Sets spielen:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <CheckBox Grid.Row="2" Grid.Column="1" Name="PlayWithSetsCheckBox" 
                                          Content="Sets aktivieren" Margin="8,0,0,0"
                                          Checked="PlayWithSetsCheckBox_Checked" 
                                          Unchecked="PlayWithSetsCheckBox_Unchecked"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Name="SetsToWinLabel" Text="Sets zum Sieg:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="SetsToWinTextBox" 
                                         Width="80" HorizontalAlignment="Left" Margin="8,0,0,0"
                                         TextChanged="SetsToWinTextBox_TextChanged"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Name="LegsPerSetLabel" Text="Legs pro Set:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Name="LegsPerSetTextBox" 
                                         Width="80" HorizontalAlignment="Left" Margin="8,0,0,0"
                                         TextChanged="LegsPerSetTextBox_TextChanged"/>
                            </Grid>
                        </Border>
                        
                        <!-- Post-Group Phase -->
                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                BorderThickness="1" CornerRadius="12" 
                                Padding="20" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="&#x1F3C6;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Nach der Gruppenphase" FontWeight="SemiBold" FontSize="15" 
                                               Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Name="PostGroupPhaseModeLabel" Text="Modus:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Name="PostGroupPhaseModeComboBox" 
                                          Margin="8,0,0,0" SelectionChanged="PostGroupPhaseModeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="&#x270B; Nur Gruppenphase" Tag="None"/>
                                    <ComboBoxItem Content="&#x1F3AF; Finalrunde (Round Robin)" Tag="RoundRobinFinals"/>
                                    <ComboBoxItem Content="&#x2694; K.-o.-System" Tag="KnockoutBracket"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Name="QualifyingPlayersLabel" Text="Qualifizierte pro Gruppe:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="QualifyingPlayersTextBox" 
                                         Width="80" HorizontalAlignment="Left" Margin="8,0,0,0"
                                         TextChanged="QualifyingPlayersTextBox_TextChanged"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Name="KnockoutModeLabel" Text="K.-o.-Modus:" 
                                           VerticalAlignment="Center" FontWeight="Medium" Foreground="#6B7280"/>
                                <ComboBox Grid.Row="6" Grid.Column="1" Name="KnockoutModeComboBox" 
                                          Margin="8,0,0,0" SelectionChanged="KnockoutModeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="&#x2694; Einfaches K.-o." Tag="SingleElimination"/>
                                    <ComboBoxItem Content="&#x1F504; Doppeltes K.-o." Tag="DoubleElimination"/>
                                </ComboBox>
                                
                                <CheckBox Grid.Row="8" Grid.Column="1" Name="IncludeGroupPhaseLosersBracketCheckBox" 
                                          Content="Gruppenphase-Verlierer ins Loser Bracket" 
                                          Margin="8,0,0,0" Checked="IncludeGroupPhaseLosersBracketCheckBox_Checked" 
                                          Unchecked="IncludeGroupPhaseLosersBracketCheckBox_Unchecked"/>
                            </Grid>
                        </Border>
                        
                        <!-- Round-specific Rules Button -->
                        <Border Background="#F0F9FF" BorderBrush="#0EA5E9" 
                                BorderThickness="1" CornerRadius="12" 
                                Padding="20" Margin="0,0,0,16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="&#x2699;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Rundenspezifische Regeln" FontWeight="SemiBold" FontSize="15" 
                                               Foreground="#0369A1" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Fuer jede Knockout-Runde koennen individuelle Regeln festgelegt werden (Sets, Legs, etc.)." 
                                           Foreground="#075985" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                <Button Name="ConfigureRoundRulesButton" Content="&#x1F527; Rundenregeln konfigurieren"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="ConfigureRoundRulesButton_Click"
                                        HorizontalAlignment="Left"
                                        Background="#0EA5E9"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rules Preview -->
                        <Border Background="#EFF6FF" BorderBrush="#3B82F6" 
                                BorderThickness="1" CornerRadius="12" 
                                Padding="20" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="&#x1F441;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Name="RulesPreviewLabel" Text="Regelvorschau" 
                                               FontWeight="SemiBold" FontSize="15" 
                                               Foreground="#1E40AF" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Name="RulesPreviewTextBlock" TextWrapping="Wrap" 
                                           Foreground="#1E3A8A" LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Button Panel -->
                <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" 
                        Background="#FAFAFA" CornerRadius="0,0,12,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                Margin="24,16,24,16">
                        <Button Name="CancelButton" Content="Abbrechen" 
                                Style="{StaticResource ModernCancelButton}"
                                Click="CancelButton_Click" 
                                Margin="0,0,12,0" IsCancel="True"/>
                        <Button Name="SaveButton" Content="Speichern" 
                                Style="{StaticResource ModernButton}"
                                Click="SaveButton_Click" IsDefault="True"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>