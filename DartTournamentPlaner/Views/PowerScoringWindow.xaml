<Window x:Class="DartTournamentPlaner.Views.PowerScoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PowerScoring - Spieler-Einteilung"
        Height="750" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Card Shadow -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverGradient}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource DisabledBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{DynamicResource SurfaceBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                  Margin="12,8"
                                                                  HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"
                                                                  Content="{TemplateBinding Content}"/>
                                                <Path Grid.Column="1"
                                                      x:Name="Arrow"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="{DynamicResource TextBrush}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,8,32,8"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.2"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4,6,4,6"
                                                      SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- âœ… NEU: ComboBoxItem Style fÃ¼r Dark Mode -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                Margin="2">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- âœ… NEU: Dark Mode-kompatible DataGrid Styles -->
        
        <!-- DataGrid Cell Style -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover State -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
                <!-- Selected State -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Row Style -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Style.Triggers>
                <!-- Alternating Row Color -->
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                </Trigger>
                <!-- Hover State -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
                <!-- Selected State -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataGrid Column Header Style -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource HeaderGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderGradient}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="ðŸŽ¯ PowerScoring"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"/>
                <TextBlock Text="Erfassen Sie die Spieler-Scores fuer eine optimale Gruppeneinteilung"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Setup Panel -->
        <Border x:Name="SetupPanel"
                Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tournament-ID -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock x:Name="TournamentIdLabel"
                                   Text="Tournament-ID (optional):"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TournamentIdTextBox"
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     ToolTip="Leave empty for automatic ID generation"/>
                            <Button x:Name="GenerateIdButton"
                                    Grid.Column="1"
                                    Content="Generate"
                                    Style="{StaticResource ModernButton}"
                                    Click="GenerateId_Click"
                                    ToolTip="Generate new Tournament ID"/>
                        </Grid>
                        
                        <!-- Info-Texte -->
                        <Border Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock x:Name="TipTextBlock"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,0,0,4">
                                    <Run Text="Tip: " FontWeight="SemiBold"/>
                                    <Run Text="Leave empty for automatic ID generation."/>
                                </TextBlock>
                                <TextBlock x:Name="NoteTextBlock"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryTextBrush}">
                                    <Run Text="Note: " FontWeight="SemiBold"/>
                                    <Run Text="Use a known ID to continue an existing tournament."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Regel-Auswahl -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Scoring-Regel waehlen:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="RuleComboBox"
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="RuleComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Spieler hinzufuegen -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Spieler hinzufuegen:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PlayerNameTextBox"
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     KeyDown="PlayerNameTextBox_KeyDown"/>
                            <Button x:Name="AddPlayerButton"
                                    Grid.Column="1"
                                    Content="+ Add Player"
                                    Style="{StaticResource ModernButton}"
                                    Click="AddPlayerButton_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Spielerliste -->
                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Spielerliste:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                MinHeight="100"
                                MaxHeight="300">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="PlayerListItems" Margin="8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SurfaceBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="10"
                                                    Margin="0,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               FontSize="13"/>
                                                    <Button Grid.Column="1"
                                                            Content="X"
                                                            FontSize="14"
                                                            FontWeight="Bold"
                                                            Padding="8,4"
                                                            Margin="0"
                                                            Style="{StaticResource ModernButton}"
                                                            Click="RemovePlayerButton_Click"
                                                            Tag="{Binding}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Scoring Panel (Initially Hidden) -->
        <Border x:Name="ScoringPanel"
                Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Scores eingeben:"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ScoringItems">
                        <!-- Dynamically filled with Scoring-Controls -->
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Results Panel (Initially Hidden) -->
        <Border x:Name="ResultsPanel"
                Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="ðŸ“Š Ergebnisse (sortiert nach Score):"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,12"/>

                <DataGrid x:Name="ResultsDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="{DynamicResource BackgroundBrush}"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="False"
                          SelectionMode="Single"
                          AlternationCount="2"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                    
                    <!-- âœ… NEU: KontextmenÃ¼ fÃ¼r Spieler-Details -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ“Š Show Details" 
                                      Click="ShowPlayerDetailsFromContextMenu_Click"
                                      FontSize="13"
                                      FontWeight="SemiBold"/>
                            <Separator/>
                            <MenuItem Header="ðŸ“‹ Copy Player Name" 
                                      Click="CopyPlayerName_Click"
                                      FontSize="13"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Rang" Width="60" Binding="{Binding Rank}"/>
                        <DataGridTextColumn Header="Spieler" Width="*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Gesamt" Width="100" Binding="{Binding TotalScore}"/>
                        <DataGridTextColumn Header="Durchschnitt" Width="120" Binding="{Binding AverageScore, StringFormat=F2}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="NewSessionButton"
                    Content="New Session"
                    Style="{StaticResource ModernButton}"
                    Click="NewSessionButton_Click"
                    ToolTip="Create a new PowerScoring session"/>
            <Button x:Name="PrintQRCodesButton"
                    Content="Print QR Codes"
                    Style="{StaticResource ModernButton}"
                    Click="PrintQRCodesButton_Click"
                    Visibility="Collapsed"
                    ToolTip="Print QR codes for all players"/>
            <Button x:Name="StartScoringButton"
                    Content="Start Scoring"
                    Style="{StaticResource ModernButton}"
                    Click="StartScoringButton_Click"/>
            <Button x:Name="CompleteScoringButton"
                    Content="Complete"
                    Style="{StaticResource ModernButton}"
                    Click="CompleteScoringButton_Click"
                    Visibility="Collapsed"/>
            <Button x:Name="ExportButton"
                    Content="Group Distribution"
                    Style="{StaticResource ModernButton}"
                    Click="ExportButton_Click"
                    Visibility="Collapsed"/>
            <Button Content="Close"
                    Style="{StaticResource ModernButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Grid.Row="0" Grid.RowSpan="4"
                Background="#CC000000"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="2"
                    CornerRadius="16"
                    Padding="40"
                    MaxWidth="500"
                    MaxHeight="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <!-- Spinner -->
                    <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                        <Grid>
                            <Ellipse Width="80" Height="80" 
                                     Stroke="{DynamicResource BorderBrush}" 
                                     StrokeThickness="4"/>
                            <Ellipse x:Name="SpinnerEllipse"
                                     Width="80" Height="80"
                                     Stroke="{DynamicResource AccentBrush}"
                                     StrokeThickness="4"
                                     StrokeDashArray="20,60"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                    </Viewbox>
                    
                    <!-- Status Title -->
                    <TextBlock x:Name="LoadingTitle"
                               Text="Initializing PowerScoring..."
                               FontSize="20"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,10"/>
                    
                    <!-- Status Message -->
                    <TextBlock x:Name="LoadingMessage"
                               Text="Please wait..."
                               FontSize="14"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,20"/>
                    
                    <!-- Progress Steps -->
                    <ItemsControl x:Name="ProgressSteps" Margin="0,0,0,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Icon}"
                                               FontSize="16"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Message}"
                                               FontSize="13"
                                               TextWrapping="Wrap"
                                               Foreground="{Binding Color}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
