<Window x:Class="DartTournamentPlaner.Views.HubPlannerTournamentsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Planner Hub Tournaments" Height="720" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogSuccessGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="16"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource DialogSuccessGradient}" CornerRadius="16,16,0,0" Padding="28,18">
                <StackPanel>
                    <TextBlock x:Name="HeaderTitle" Text="ðŸ† Planner Hub Tournaments" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock x:Name="HeaderSubtitle" Text="Fetch tournaments registered with your license" FontSize="13" Foreground="{DynamicResource TextBrush}" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="24,18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock x:Name="DescriptionText" Text="Request tournaments from the Tournament Hub." FontSize="13" Foreground="#4B5563" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock x:Name="LicenseLabel" Text="License Key" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                            <TextBox x:Name="LicenseKeyTextBox" IsReadOnly="True" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" FontFamily="Consolas" Padding="8,6"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock x:Name="DaysLabel" Text="Days" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                            <TextBox x:Name="DaysTextBox" Text="14" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Padding="8,6" HorizontalContentAlignment="Right"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                            <Button x:Name="FetchButton" Content="ðŸ”„ Fetch" Style="{StaticResource PrimaryButton}" Click="FetchButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="StatusText" Text="" FontSize="12" Foreground="#6B7280"/>
                </StackPanel>

                <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Padding="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TournamentsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="10" 
BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" Margin="0,0,0,10" MouseLeftButtonUp="TournamentCard_Click">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,0,12,4">
                                                <TextBlock Text="ðŸ·" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" Foreground="#111827"/>
                                            </StackPanel>
                                            <Border Grid.Row="0" Grid.Column="1" Background="#EEF2FF" BorderBrush="#C7D2FE" BorderThickness="1" CornerRadius="8" Padding="8,4">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" Foreground="#4338CA"/>
                                                    <TextBlock Text=" â€¢ " FontSize="12" Foreground="#4338CA"/>
                                                    <TextBlock Text="{Binding GameMode}" FontSize="12" Foreground="#4338CA"/>
                                                </StackPanel>
                                            </Border>

                                            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Location}" FontSize="12" Foreground="#4B5563"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#6B7280" TextWrapping="Wrap"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock x:Name="StartLabel" Text="Start" FontSize="11" Foreground="#6B7280"/>
                                                    <TextBlock Text="{Binding StartDate}" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock x:Name="UpdatedLabel" Text="Updated" FontSize="11" Foreground="#6B7280"/>
                                                    <TextBlock Text="{Binding UpdatedAt}" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                                                </StackPanel>
                                            </Grid>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                                <TextBlock Text="ID:" FontSize="11" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding TournamentId}" FontSize="12" FontFamily="Consolas" Foreground="#111827" Margin="4,0,10,0"/>
                                                <Button Content="ðŸ“‹" Style="{StaticResource SecondaryButton}" Padding="10,4" Click="CopyId_Click" Tag="{Binding TournamentId}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" CornerRadius="0,0,16,16" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CloseButton" Content="âœ– Close" Style="{StaticResource SecondaryButton}" Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
