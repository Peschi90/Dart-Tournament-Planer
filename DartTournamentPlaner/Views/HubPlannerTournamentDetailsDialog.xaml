<Window x:Class="DartTournamentPlaner.Views.HubPlannerTournamentDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tournament Details" Height="520" Width="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogSuccessGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Padding="18" BorderBrush="#E5E7EB" BorderThickness="1" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" BlurRadius="25" Opacity="0.15"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock x:Name="SubtitleText" FontSize="13" Foreground="#6B7280" TextWrapping="Wrap"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" FontWeight="SemiBold" Foreground="#374151"/>
                <TextBlock x:Name="NameText" Grid.Row="0" Grid.Column="1" Foreground="#111827"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="ID" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="IdText" Grid.Row="1" Grid.Column="1" FontFamily="Consolas" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="License" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="LicenseText" Grid.Row="2" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Status" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="StatusText" Grid.Row="3" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Mode" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="ModeText" Grid.Row="4" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Location" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="LocationText" Grid.Row="5" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Start" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="StartText" Grid.Row="6" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Updated" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="UpdatedText" Grid.Row="7" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Created" FontWeight="SemiBold" Foreground="#374151" Margin="0,6,0,0"/>
                <TextBlock x:Name="CreatedText" Grid.Row="8" Grid.Column="1" Foreground="#111827" Margin="0,6,0,0"/>
            </Grid>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" Foreground="#374151" Margin="0,0,0,10"/>

                    <TextBlock Text="Participants" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <TextBlock x:Name="ParticipantsTextBlock" TextWrapping="Wrap" Foreground="#111827" Margin="0,0,0,10"/>

                    <TextBlock Text="Game Rules" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                            <TextBlock x:Name="GameRulesTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="#111827"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CopyIdButton" Content="Copy ID" Padding="14,8" Margin="0,0,8,0" Click="CopyIdButton_Click" Style="{StaticResource SecondaryButton}"/>
                <Button x:Name="ImportPlayersButton" Content="Import Players" Padding="14,8" Margin="0,0,8,0" Click="ImportPlayers_Click" Style="{StaticResource SecondaryButton}"/>
                <Button Content="Close" Padding="14,8" Click="CloseButton_Click" Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
