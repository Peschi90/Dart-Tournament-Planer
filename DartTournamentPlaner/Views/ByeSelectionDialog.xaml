<Window x:Class="DartTournamentPlaner.Views.ByeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Freilos vergeben" Height="237" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="{DynamicResource MainBackgroundBrush}">
    <Grid Margin="20" Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="35.96"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="13.08"/>
        </Grid.RowDefinitions>

        <TextBlock Name="MessageTextBlock" Grid.Row="0" 
                   Text="Select the player who should receive the bye:"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"
                   FontWeight="Medium"
                   Foreground="{DynamicResource TextBrush}"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="210">
            <Button Name="Player1Button" Content="Player 1" 
                    Width="200" Height="40" Margin="5"
                    Background="{DynamicResource DialogSuccessGradient}" Foreground="{DynamicResource TextBrush}"
                    FontSize="14" FontWeight="Medium"
                    Click="Player1Button_Click" BorderThickness="1,1,1,1" BorderBrush="{DynamicResource BorderBrush}"/>

            <Button Name="Player2Button" Content="Player 2" 
                    Width="200" Height="40" Margin="5"
                    Background="{DynamicResource DialogWarningGradient}" Foreground="{DynamicResource TextBrush}"
                    FontSize="14" FontWeight="Medium"
                    Click="Player2Button_Click" BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>

        <Button Grid.Row="2" Name="CancelButton" Content="Cancel" 
                Width="100"
                Background="{DynamicResource ButtonGradient}" Foreground="{DynamicResource TextBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1.5"
                HorizontalAlignment="Center"
                Click="CancelButton_Click" Margin="0,2,0,-18"/>
    </Grid>
</Window>