<Window x:Class="DartTournamentPlaner.Views.StatisticsLicenseRequiredDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics License Required" Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Statistics Gradient -->
        <LinearGradientBrush x:Key="StatisticsGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF10B981" Offset="0"/>
            <GradientStop Color="#FF059669" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource StatisticsGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource StatisticsGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Statistics License Required" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="32,24" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" MaxWidth="400">
                    
                    <!-- Main Message -->
                    <TextBlock x:Name="MessageText"
                               Text="Advanced statistics require a valid license with the 'Statistics' feature and an active Hub connection."
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="#374151"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24"/>

                    <!-- Feature Benefits -->
                    <Border Background="#F0FDF4" 
                            BorderBrush="#10B981" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="BenefitsTitle"
                                       Text="ðŸ“ˆ Statistics Features include:"
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#047857" 
                                       Margin="0,0,0,12"/>
                            <TextBlock x:Name="BenefitsList"
                                       TextWrapping="Wrap" 
                                       FontSize="13" 
                                       Foreground="#047857" 
                                       LineHeight="20">
                                <Run Text="- Detailed player performance analytics"/>
                                <LineBreak/>
                                <Run Text="- Match history and trends"/>
                                <LineBreak/>
                                <Run Text="- Tournament progression tracking"/>
                                <LineBreak/>
                                <Run Text="- Real-time Hub synchronization"/>
                                <LineBreak/>
                                <Run Text="- Advanced statistical reports"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Hub Requirement Notice -->
                    <Border Background="#FEF3C7" 
                            BorderBrush="#F59E0B" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="HubNoticeTitle"
                                       Text="ðŸ”— Hub Connection Required"
                                       FontWeight="Bold" 
                                       FontSize="12" 
                                       Foreground="#92400E" 
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="HubNoticeText"
                                       Text="Statistics features require an active Tournament Hub connection for real-time data synchronization."
                                       FontSize="11" 
                                       Foreground="#92400E" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Text -->
                    <TextBlock x:Name="ActionText"
                               Text="Would you like to request a license with Statistics and Hub features?"
                               FontSize="14"
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CancelButton" 
                            Content="âŒ Cancel" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CancelButton_Click"/>
                    
                    <Button x:Name="RequestLicenseButton" 
                            Content="ðŸ›’ Request Statistics License" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="RequestLicenseButton_Click"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>