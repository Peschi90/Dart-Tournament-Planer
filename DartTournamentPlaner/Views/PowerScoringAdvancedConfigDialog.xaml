<Window x:Class="DartTournamentPlaner.Views.PowerScoringAdvancedConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Distribution Settings" 
        Height="600" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- PowerScoring Gradient -->
        <LinearGradientBrush x:Key="PowerScoringGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#6366F1" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DialogPrimaryGradient}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#8B5CF6" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="{DynamicResource BackgroundBrush}" 
            CornerRadius="16" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource DialogPrimaryGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="âš™ï¸" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="HeaderTitleText"
                               Text="Advanced Distribution Settings" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="32,24">
                <StackPanel>
                    
                    <!-- Distribution Mode Card -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="#8B5CF6" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock x:Name="DistributionModeTitleText"
                                       Text="ðŸŽ¯ Distribution Mode" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#8B5CF6" 
                                       Margin="0,0,0,12"/>
                            
                            <ComboBox x:Name="DistributionModeCombo"
                                      Background="{DynamicResource BackgroundBrush}"
                                      Foreground="{DynamicResource TextBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      FontSize="13"
                                      Padding="10,8"
                                      SelectionChanged="DistributionModeCombo_SelectionChanged">
                                <ComboBoxItem Background="{DynamicResource SurfaceBrush}" 
                                              Foreground="{DynamicResource TextBrush}"
                                              Content="âš–ï¸ Balanced (Even distribution)" Tag="Balanced" IsSelected="True"/>
                                <ComboBoxItem Background="{DynamicResource SurfaceBrush}" 
                                              Foreground="{DynamicResource TextBrush}"
                                              Content="ðŸ Snake Draft (1-2-3-4-4-3-2-1)" Tag="SnakeDraft"/>
                                <ComboBoxItem Background="{DynamicResource SurfaceBrush}" 
                                              Foreground="{DynamicResource TextBrush}"
                                              Content="ðŸ” Top-Heavy (Strongest first)" Tag="TopHeavy"/>
                                <ComboBoxItem Background="{DynamicResource SurfaceBrush}" 
                                              Foreground="{DynamicResource TextBrush}"
                                              Content="ðŸŽ² Random" Tag="Random"/>
                            </ComboBox>
                            
                            <TextBlock x:Name="ModeDescriptionText"
                                       Text="Players are evenly distributed across groups based on ranking."
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Player Limits Card - OPTIONAL / Info-Only -->
                    <Border Background="#EFF6FF" 
                            BorderBrush="#3B82F6" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16"
                            Visibility="Collapsed">
                        <!-- âœ… Versteckt: Wird durch klassen-spezifische Einstellungen ersetzt -->
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ Player Limits Per Group" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#1E40AF" 
                                       Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Min Players -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Minimum:" 
                                               FontSize="12" 
                                               Foreground="#1E40AF" 
                                               Margin="0,0,0,4"/>
                                    <TextBox x:Name="MinPlayersTextBox"
                                             Text="2"
                                             FontSize="13"
                                             Padding="8"
                                             PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                </StackPanel>
                                
                                <!-- Max Players -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Maximum:" 
                                               FontSize="12" 
                                               Foreground="#1E40AF" 
                                               Margin="0,0,0,4"/>
                                    <TextBox x:Name="MaxPlayersTextBox"
                                             Text="6"
                                             FontSize="13"
                                             Padding="8"
                                             PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Class-Specific Rules Card -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="#F59E0B" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock x:Name="ClassRulesTitleText"
                                       Text="ðŸ† Class-Specific Rules" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       Foreground="#F59E0B" 
                                       Margin="0,0,0,12"/>
                            
                            <ItemsControl x:Name="ClassRulesControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource BackgroundBrush}" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="110"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Klassen-Name -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding ClassName}" 
                                                           Foreground="{DynamicResource TextBrush}"
                                                           FontWeight="SemiBold" 
                                                           FontSize="13" 
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- Gruppen-Anzahl -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                                                    <TextBlock x:Name="GroupsLabelText"
                                                               Text="Groups:" 
                                                               Foreground="{DynamicResource TextBrush}"
                                                               FontSize="11" 
                                                               VerticalAlignment="Center" 
                                                               Margin="0,0,5,0"/>
                                                    <TextBox Text="{Binding GroupCount, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="{DynamicResource SurfaceBrush}"
                                                             Foreground="{DynamicResource TextBrush}"
                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                             Width="50" 
                                                             FontSize="11" 
                                                             Padding="4"
                                                             PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                                </StackPanel>
                                                
                                                <!-- âœ… Spieler pro Gruppe -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                                                    <TextBlock x:Name="PlayersLabelText"
                                                               Text="Players:" 
                                                               Foreground="{DynamicResource TextBrush}"
                                                               FontSize="11" 
                                                               VerticalAlignment="Center" 
                                                               Margin="0,0,5,0"/>
                                                    <TextBox Text="{Binding PlayersPerGroup, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="{DynamicResource SurfaceBrush}"
                                                             Foreground="{DynamicResource TextBrush}"
                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                             Width="50" 
                                                             FontSize="11" 
                                                             Padding="4"
                                                             PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                                </StackPanel>
                                                
                                                <!-- Skip Checkbox -->
                                                <CheckBox Grid.Column="3" 
                                                          x:Name="SkipCheckBox"
                                                          Content="Skip" 
                                                          Foreground="{DynamicResource TextBrush}"
                                                          IsChecked="{Binding Skip}" 
                                                          FontSize="11" 
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Info Card -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="#10B981" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="16"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¡" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Top"/>
                            <TextBlock x:Name="TipTextBlock"
                                       TextWrapping="Wrap" FontSize="12" Foreground="#10B981" LineHeight="18">
                                <Run Text="Tipp: " FontWeight="SemiBold"/>
                                <Run x:Name="TipTextRun"
                                     Text="Legen Sie fÃ¼r jede Klasse individuell fest wie viele Gruppen mit wie vielen Spielern erstellt werden sollen. Z.B. Platin: 2 Gruppen mit je 4 Spielern, Gold: 3 Gruppen mit je 6 Spielern."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CancelButton" 
                            Content="âŒ Cancel" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CancelButton_Click"/>
                    
                    <Button x:Name="ApplyButton" 
                            Content="âœ… Apply" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="ApplyButton_Click"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
