<Window x:Class="DartTournamentPlaner.Views.HubRegistrationSuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tournament Registered" Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Success Gradient -->
        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF10B981" Offset="0"/>
            <GradientStop Color="#FF059669" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="0" 
                                                          BlurRadius="20" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="12" 
                              BlurRadius="30" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SuccessGradient}" 
                    CornerRadius="16,16,0,0" 
                    Padding="32,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="✅" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TitleText" 
                               Text="Tournament Successfully Registered" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="32,24" HorizontalAlignment="Center">
                
                <!-- Success Message -->
                <TextBlock x:Name="MessageText"
                           Text="Your tournament has been successfully registered with the Tournament Hub!"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#374151"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,24"/>

                <!-- Tournament Info -->
                <Border Background="#F0FDF4" 
                        BorderBrush="#10B981" 
                        BorderThickness="1" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock x:Name="TournamentInfoTitle"
                                   Text="🏆 Tournament Information"
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#047857" 
                                   Margin="0,0,0,12"/>
                        
                        <!-- Tournament ID -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Tournament ID:" 
                                       FontWeight="SemiBold" 
                                       FontSize="13" 
                                       Foreground="#047857"/>
                            <TextBlock x:Name="TournamentIdText" 
                                       Grid.Column="1"
                                       Text="ABC-12345" 
                                       FontSize="13" 
                                       Foreground="#047857"
                                       FontFamily="Consolas"/>
                        </Grid>

                        <!-- Join URL -->
                        <TextBlock Text="Join URL:" 
                                   FontWeight="SemiBold" 
                                   FontSize="13" 
                                   Foreground="#047857"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="JoinUrlText" 
                                   Text="https://tournament-hub.example.com/join/ABC-12345" 
                                   FontSize="12" 
                                   Foreground="#047857"
                                   FontFamily="Consolas"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Features Info -->
                <Border Background="#F0F9FF" 
                        BorderBrush="#3B82F6" 
                        BorderThickness="1" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock x:Name="FeaturesTitle"
                                   Text="🌟 Active Features"
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="#1E40AF" 
                                   Margin="0,0,0,12"/>
                        <TextBlock x:Name="FeaturesText"
                                   TextWrapping="Wrap" 
                                   FontSize="13" 
                                   Foreground="#1E40AF" 
                                   LineHeight="20">
                            <Run Text="- Real-time tournament synchronization"/>
                            <LineBreak/>
                            <Run Text="- Multi-device tournament access"/>
                            <LineBreak/>
                            <Run Text="- Live match result updates"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Action Message -->
                <TextBlock x:Name="ActionText"
                           Text="The join URL has been copied to your clipboard automatically."
                           FontSize="14"
                           Foreground="#6B7280"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>

            </StackPanel>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CopyUrlButton" 
                            Content="📋 Copy URL" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="CopyUrlButton_Click"/>
                    
                    <Button x:Name="OkButton" 
                            Content="✅ OK" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="OkButton_Click"
                            IsDefault="True"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>