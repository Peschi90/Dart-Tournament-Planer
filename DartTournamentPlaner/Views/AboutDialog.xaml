<Window x:Class="DartTournamentPlaner.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About Dart Tournament Planner" Height="700" Width="650"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="4" 
                          BlurRadius="16" 
                          Opacity="0.08"/>

        <DropShadowEffect x:Key="HeaderShadow" 
                          Color="Black" 
                          Direction="270" 
                          ShadowDepth="2" 
                          BlurRadius="12" 
                          Opacity="0.1"/>

        <!-- Modern Gradient Backgrounds -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <!-- Main container with modern design -->
    <Border Background="{StaticResource MainBackgroundBrush}" 
     CornerRadius="16" 
      Effect="{StaticResource HeaderShadow}"
   Margin="8">
   <Grid>
 <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

        <!-- Header with modern gradient design -->
            <Border Grid.Row="0" 
        Background="{StaticResource HeaderGradient}" 
   CornerRadius="16,16,0,0" 
            BorderBrush="#E5E7EB" 
       BorderThickness="0,0,0,1" 
          Padding="32,24"
     Effect="{StaticResource HeaderShadow}">
        <StackPanel HorizontalAlignment="Center">
  <TextBlock Text="ðŸŽ¯" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
    <TextBlock x:Name="TitleTextBlock" Text="Dart Tournament Planner" 
            FontSize="28" FontWeight="Bold" 
      Foreground="#1F2937" HorizontalAlignment="Center"/>
          <TextBlock x:Name="VersionTextBlock" Text="Version 1.0.0" 
            FontSize="14" Foreground="#6B7280" 
     HorizontalAlignment="Center" Margin="0,4,0,0"/>
   </StackPanel>
  </Border>

          <!-- Content with white background and scrolling -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0" Padding="0">
 <Border Background="White" Padding="32,24">
     <StackPanel>
<!-- Description Card -->
       <Border Style="{StaticResource CardStyle}">
              <StackPanel>
        <TextBlock Text="ðŸ“‹ About" 
        FontSize="16" FontWeight="SemiBold" 
         Foreground="#374151" Margin="0,0,0,12"/>
      <TextBlock x:Name="DescriptionTextBlock"
           Text="A modern and user-friendly application for organizing dart tournaments."
      FontSize="13"
         TextWrapping="Wrap"
          LineHeight="20"
  Foreground="#4B5563"/>
        </StackPanel>
           </Border>

       <!-- Features Card -->
    <Border Style="{StaticResource CardStyle}">
          <StackPanel>
       <TextBlock x:Name="FeaturesHeaderTextBlock" Text="âœ¨ Features" 
   FontSize="16" FontWeight="SemiBold" 
           Foreground="#374151" Margin="0,0,0,12"/>
              <TextBlock x:Name="FeaturesTextBlock"
    Text="â€¢ Multiple tournament formats&#x0a;â€¢ Real-time tracking&#x0a;â€¢ Statistics"
   FontSize="12"
    TextWrapping="Wrap"
        LineHeight="22"
          Foreground="#4B5563"/>
   </StackPanel>
      </Border>

    <!-- Info Card -->
      <Border Style="{StaticResource CardStyle}">
     <StackPanel>
     <TextBlock x:Name="AppInfoHeaderTextBlock" Text="â„¹ï¸ Application Information" 
      FontSize="16" FontWeight="SemiBold" 
      Foreground="#374151" Margin="0,0,0,12"/>
                 
 <Grid>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="120"/>
    <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
       <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

  <TextBlock x:Name="DeveloperLabelTextBlock" Grid.Row="0" Grid.Column="0" Text="Developer:" 
                  FontWeight="SemiBold" Foreground="#4B5563" 
       VerticalAlignment="Center" Margin="0,4"/>
  <TextBlock x:Name="DeveloperTextBlock" Grid.Row="0" Grid.Column="1" 
        Text="Pascal Schuler" 
         VerticalAlignment="Center" Margin="8,4"/>

      <TextBlock x:Name="FrameworkLabelTextBlock" Grid.Row="1" Grid.Column="0" Text="Framework:" 
            FontWeight="SemiBold" Foreground="#4B5563" 
           VerticalAlignment="Center" Margin="0,4"/>
    <TextBlock x:Name="FrameworkTextBlock" Grid.Row="1" Grid.Column="1" 
      Text=".NET 9 / WPF" 
     VerticalAlignment="Center" Margin="8,4"/>

      <TextBlock x:Name="LicenseLabelTextBlock" Grid.Row="2" Grid.Column="0" Text="License:" 
                FontWeight="SemiBold" Foreground="#4B5563" 
          VerticalAlignment="Center" Margin="0,4"/>
            <TextBlock x:Name="LicenseTextBlock" Grid.Row="2" Grid.Column="1" 
       Text="Open Source (MIT License)" 
      VerticalAlignment="Center" Margin="8,4"/>

          <TextBlock x:Name="WebsiteLabelTextBlock" Grid.Row="3" Grid.Column="0" Text="Website:" 
       FontWeight="SemiBold" Foreground="#4B5563" 
    VerticalAlignment="Center" Margin="0,4"/>
                 <TextBlock x:Name="WebsiteTextBlock" Grid.Row="3" Grid.Column="1" 
         Text="https://github.com/Peschi90/Dart-Turnament-Planer" 
           VerticalAlignment="Center" Margin="8,4"
          Foreground="#3B82F6" Cursor="Hand"
      TextDecorations="Underline"/>
           </Grid>
     </StackPanel>
 </Border>

      <!-- Credits Card -->
         <Border Style="{StaticResource CardStyle}">
            <StackPanel>
            <TextBlock x:Name="ThanksHeaderTextBlock" Text="ðŸ™ Special Thanks" 
        FontSize="16" FontWeight="SemiBold" 
      Foreground="#374151" Margin="0,0,0,12"/>
   
 <TextBlock x:Name="CreditsTextBlock"
         Text="Thanks to all contributors and the dart community."
      FontSize="12"
         TextWrapping="Wrap"
    LineHeight="18"
          Foreground="#6B7280"/>
        </StackPanel>
      </Border>
              </StackPanel>
  </Border>
      </ScrollViewer>

     <!-- Footer -->
    <Border Grid.Row="2" 
      Background="White" 
       CornerRadius="0,0,16,16"
         Padding="32,20">
       <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="CloseButton" Content="Close" Style="{StaticResource ModernButton}"
            Click="CloseButton_Click"/>
     </StackPanel>
      </Border>
        </Grid>
    </Border>
</Window>